/* pages/onlineOrder/submitOrder/submitOrder.wxss */
page {
  color: #000;
  padding-bottom: 180rpx;
  background-size:100%  120px;
  background-repeat: no-repeat;
  background-image: linear-gradient(to bottom, #228bff, #f7f7f7);
  
}

.topBox {
 width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;

}

.topBox .content {
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 20rpx;
  margin-top: 40rpx;

}

.topBox .content .top {
  border-bottom: solid 2rpx #ededed;
}

.topBox .content .top .type {
  font-size: 40rpx;
  font-weight: bold;
}

.topBox .content .top .address {
  font-size: 24rpx;
  color: #919191;
  margin-bottom: 20rpx;
}
.topBox .content .top .address2{
  color: #000;
}
.topBox .content .top .address2 .nickname{
  margin-right: 20rpx;
 
}
.topBox .content .pickerBox {
  padding: 20rpx 0;
}

.topBox .content .time {
  flex: 1;
  text-align: right;
  color: #db4e1c;
  font-size: 28rpx;
}

/* orderDetail */
.orderDetail {
  padding: 26rpx;
}

.orderDetail .content {
  background: #fff;
  border-radius: 20rpx;
  padding: 0 20rpx;
}

.orderDetail .partTitle {
  font-size: 28rpx;
  color: #000000;
  padding: 30rpx 0;
  border-bottom: solid 2rpx #ededed;
}

.orderDetail .dishBox {
  padding: 40rpx 0;
  border-bottom: solid 2rpx #ededed;
}

.orderDetail .dishBox .eachDish {
  margin-bottom: 20rpx;
}

.orderDetail .dishBox .dishImg {
  width: 128rpx;
  height: 128rpx;
  border-radius: 4rpx;
  background-color: #d8d8d8;
  margin-right: 20rpx;
}

.orderDetail .dishBox .textBox {
  height: 128rpx;
  justify-content: space-between;
}

.orderDetail .dishBox .name {
  font-size: 28rpx;
}

.orderDetail .dishBox .desc,
.orderDetail .dishBox .num {
  font-size: 24rpx;
  color: #919191;
}

.orderDetail .dishBox .price {
  font-size: 32rpx;
  font-weight: bold;
  text-align: right;
  color: #000000;
}

.package,
.total {
  padding: 20rpx 0;
  border-bottom: solid 2rpx #ededed;
  font-size: 28rpx;
}

.package .price {
  font-size: 32rpx;
  font-weight: bold;
}

.total {
  border: none;
  font-weight: 400;
}

.total .price .num {
  font-size: 40rpx;
  font-weight: bolder;
  color: #e46858

  ;
}

.btnBox {
  width: 100%;
  position: fixed;
  bottom: 54rpx;
  padding: 0 26rpx;
