/*模态框*/
/*模态框*/
.modals {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .5);
}

.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  height: 80vh;
  background-color: #fff;
}

/*动画前初始位置*/
.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.editIcon{
  min-width: 20%;
text-align: right;
}
/* 模态框内容 */
.modals .titleBox {
  position: relative;
  text-align: center;
  font-size: 28rpx;
  border-bottom: solid 2rpx #ededed;
  padding-bottom: 30rpx;
}

.modals .cancleBox {
  position: absolute;
}
.modals .eachList{
  padding:30rpx  0;
  border-bottom: solid 2rpx #ededed;
}
.modals .newBtnBox{
  padding: 0 26rpx;
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  left: 0;
  bottom: 40rpx;
  z-index:10000
}
.modals .newBtnBox .newBtn{
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 46px;
  border: solid 2rpx #228bff;
  color: #228bff;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}
/* radio */
.radio {
  padding: 10rpx;
  border: 2rpx solid #919191;
  border-radius: 50%;
  margin-right: 20rpx;
  min-height: 30rpx;
min-width: 30rpx;

}

.radio.active {
  border-color: #228bff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio.active .circle {
  width: 20rpx;
  height: 20rpx;
  background-color: #228bff;
  border-radius: 50%;
}

.address {
  font-size: 28rpx;
}

.addressinfo {
  color: #919191;
  font-size: 28rpx;
}

.addressinfo .name {
  margin-right: 20rpx;
}