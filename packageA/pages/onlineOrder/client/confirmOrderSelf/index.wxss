/* pages/onlineOrder/submitOrder/submitOrder.wxss */
page {
  color: #000;
  background-image: linear-gradient(to bottom, #228bff, #f7f7f7);
  background-size: 100% 120px;
  background-repeat: no-repeat;
  padding-bottom: 180rpx;
}
.xiaoji{
  color: #e46858;
  font-weight: bold;
  margin-left: 10rpx;
}

.topBox {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
margin-top: 20rpx;
}

.topBox .map {
  width: 200rpx;
  height: 200rpx;
  min-width: 200rpx;
  min-height: 200rpx;
  background-color: #d8d8d8;
  margin-left: 20rpx;
}
.addressBox .title{
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.addressBox .name {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}
.addressBox .name .icon-weizhi:before{
  margin-right: 10rpx;
}

.topBox .content {
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 20rpx;
  margin-top: 40rpx;

}

.topBox .content .top {
  align-items: flex-start;

}

.topBox .content .top .type {
  font-size: 40rpx;
  font-weight: bold;
}

.topBox .content .top .address {
  font-size: 24rpx;
  color: #919191;
  margin-bottom: 20rpx;
}

.topBox .content .pickerBox {
  padding: 20rpx 0;
}
.placeholder{
  color: #c0c0c0;
  font-size: 28rpx;
}
.topBox .content .time {
  flex: 1;
  text-align: right;
  color: #db4e1c;
  font-size: 28rpx;
  text-align: left;
  padding: 20rpx 0;
}
.topBox .content   .tel{
  padding: 20rpx 0;
}
.topBox .content .info{
  align-items: flex-start;
}
.topBox .content .timeLabel,.topBox .content .telLabel{
  font-size: 24rpx;
  color: #919191;
  margin-bottom: 5rpx;
}
.topBox .content .telInput{
  flex: 1;
  text-align: right;
  font-size: 28rpx;

  
}
/* orderDetail */
.orderDetail {
  padding: 26rpx;
}

.orderDetail .content {
  background: #fff;
  border-radius: 20rpx;
  padding: 0 20rpx;
}

.orderDetail .partTitle {
  font-size: 28rpx;
  color: #000000;
  padding: 30rpx 0;
  border-bottom: solid 2rpx #ededed;
}

.orderDetail .dishBox {
  padding: 40rpx 0;
  /* border-bottom: solid 2rpx #ededed; */
}

.orderDetail .dishBox .eachDish {
  margin-bottom: 20rpx;
}

.orderDetail .dishBox .dishImg {
  width: 128rpx;
  height: 128rpx;
  border-radius: 4rpx;
  background-color: #d8d8d8;
  margin-right: 20rpx;
}
.priceBox .tips{
  color: #919191;
  font-size: 20rpx;
}
.orderDetail .dishBox .textBox {
  height: 128rpx;
  justify-content: space-between;
}

.orderDetail .dishBox .name {
  font-size: 28rpx;
}

.orderDetail .dishBox .desc,
.orderDetail .dishBox .num {
  font-size: 24rpx;
  color: #919191;
}

.orderDetail .dishBox .price {
  font-size: 32rpx;
  font-weight: bold;
  text-align: right;
  color: #000000;
}

.package,
.total {
  padding: 20rpx 0;
  border-bottom: solid 2rpx #ededed;
  font-size: 28rpx;
}
.package .descriptionInput{
  flex: 1;
  text-align: right;
  
}
.package .price {
  font-size: 32rpx;
  font-weight: bold;
}

.total {
  border: none;
  font-weight: 400;
}

.total .price .num {
  font-size: 40rpx;
  font-weight: bolder;
  color: #e46858;
}

.btnBox {
  width: 100%;
  position: fixed;
  bottom: 54rpx;
  padding: 0 26rpx;
  left: 0;
  box-sizing: border-box;
  background-color: transparent;
}

.btnBox .priceBox {
  color: #fff;
  background-color: #000;
  flex: 1;
  border-radius: 46px 0 0 46px;
  text-align: left;
  font-size: 28rpx;
  padding-left: 40rpx;
  height: 92rpx;
  line-height: 92rpx;
}

.btnBox .priceBox .price {
  font-size: 36rpx;
  font-weight: bold;
}

.sendBtn {
  text-align: center;
  color: #fff;
  height: 92rpx;
  line-height: 92rpx;
  box-shadow: 0 10rpx 20rpx 0 rgba(0, 0, 0, 0.2);
  max-height: 92rpx;
  background-color: transparent;
  border-radius: 46px;
}
.addressBox{
  width: 100%;
}
.btnBox .right {
  font-size: 24rpx;
  font-weight: bold;
  background-color: #228bff;
  padding: 0 6rpx;
  border-radius: 0 46px 46px 0;
  height: 92rpx;
  line-height: 92rpx;
  width: 180rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}