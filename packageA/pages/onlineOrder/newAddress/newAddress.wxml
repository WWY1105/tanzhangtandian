<!--packageA/pages/onlineOrder/newAddress.wxml-->
<view class="each flexSpace" bindtap="toGetAddress">
	<view class="label">收货地址:</view>
	<view class="value flexStart">
		<view class="noAddress flexStart" wx:if="{{!fullAddress}}">
			<text class="iconfont icon-weizhi"></text>
			<text> 点击选择收货地址</text>
		</view>
		<text class="fullAddress" wx:else>{{fullAddress}}</text>
	</view>
</view>
<view class="each flexSpace">
	<view class="label">门牌号：</view>
	<view class="value">
		<input placeholder-class="placeholder" placeholder="详细地址, 例1层101室"></input>
	</view>
</view>
<view class="each flexSpace">
	<view class="label">联系人：</view>
	<view class="value">
		<input placeholder-class="placeholder" placeholder="请填写收货人姓名"></input>
	</view>
</view>
<view class="each flexSpace">
	<view class="label">手机号：</view>
	<view class="value">
		<input placeholder-class="placeholder" placeholder="请填写收货人手机号码" type="number"></input>
	</view>
</view>

<!-- 提交 -->
<view class="btnBox">
	<view class="btn">保存地址</view>
</view>