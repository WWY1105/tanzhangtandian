/* pages/onlineOrder/orderRecord/orderRecord.wxss */
page {
  color: #000;
  background-color: #f7f7f7;

}

.noData {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 50%;
}

.tabBox {
  padding: 30rpx 140rpx;
  font-size: 36rpx;
}

.tabBox .active {
  color: #228bff;
}

.tabBox .active .line {
  background-color: #228bff;
  width: 120rpx;
  height: 4rpx;
  border-radius: 8rpx;
  display: inline-block;
  margin-top: 2rpx;
}

/* --- */
.contentBox {
  padding: 00rpx 26rpx;
}

.contentBox .eachRecord {
  background-color: #fff;
  padding: 30rpx 20rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.userInfo {
  margin-bottom: 40rpx;
}

.userInfo .userImg {
  width: 60rpx;
  height: 60rpx;
  /* background-color: #333; */
  margin-right: 30rpx;
  border-radius: 50%;
}

.userInfo .userIcon {
  font-size: 55rpx;
  color: #999;
  margin-right: 30rpx;
}


.userInfo .username {
  font-size: 36rpx;
}

.userInfo .status {
  font-size: 28rpx;
  color: #74e34e;
}
.userInfo .status  .feeback{
  color: #999;
}

.goodBox{
  overflow-x: scroll;

}
.goodsImg {
  position: relative;
  padding-right: 128rpx;
}
scroll-view{
  position: relative;
}
 .mask {
  position: absolute;
  width: 160rpx;
  height: 128rpx;
  top: 0;
  right: 0;
  background-image: linear-gradient(to left, #ffffff, rgba(255, 255, 255, 0.78) 0%);
  text-align: center;
  font-size: 20rpx;
  color: #919191;
  flex-direction: column;
  z-index: 99999999;
  align-items: center;
  display: flex;
  justify-content: center;
  
}

 .mask .totalPrice {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.goodsImg .good {
  margin-right: 20rpx;

}

.goodsImg .goodImg {
  width: 128rpx;
  height: 128rpx;
  border-radius: 4rpx;
  background-color: #d8d8d8;
}

.goodsImg .goodName {
  font-size: 24rpx;
  color: #676767;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 128rpx;
  min-height: 24rpx;
  margin-top: 10rpx;
}

.deleteBox {
  margin-top: 30rpx;
}

.deleteBox .deleteBtn {
  font-size: 24rpx;
  padding: 4rpx 34rpx;
  border-radius: 4rpx;
  border: solid 1rpx #c9c9c9;
}