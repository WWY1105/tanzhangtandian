/* pages/myApprentice/index.wxss */
page{
  background-color: #232832;
}
.rule {
  width: 100%;
  vertical-align: bottom;
  height: auto;
}
.selectBox {
  margin: auto;
  margin-top: 90rpx;
  text-align: center;
  height: 90rpx;
}
.selectBox image{
  width: 268rpx;
  height: 80rpx;
}
.content {
  padding: 40rpx;
  border-top: 1px solid #71798b;
}
.user {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #485060;
  align-items: center;
}
.userImg {
  width: 80rpx;
  height: 80rpx;
  border: solid 1px #ffffff;
  border-radius: 100px;
}
.userInfo {
  height: 80rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.userName {
  font-size: 40rpx;
  color: #ffffff;
}
.time {
  font-size: 24rpx;
  color: #a7a7a7;
}
.grade {
  width: 120rpx;
  height: 32rpx;
  border-radius: 7.5px;
  /* border-style: solid;
  border-width: 1px;
  border-image-source: linear-gradient(to bottom, #f6eac4, #ead092); */
  border: 1px solid #ead092;
  /* border-image-slice: 1; */
  background-image: linear-gradient(105deg, #595959, #222222), linear-gradient(to bottom, #f6eac4, #ead092);
  background-origin: border-box;
  background-clip: content-box, border-box;
  display: flex;
  text-align: center;
  align-items: center;
}
.grade image{
  width: 22rpx;
  height: 20rpx;
  margin-left: 20rpx;
}
.grade view{
  font-size: 24rpx;
  color: #ead092;
  margin-left: 10rpx;
}
.total {
  font-size: 32rpx;
  padding-bottom: 40rpx;
  color: #a7a7a7;
  text-align: right;
  border-bottom: 1px solid #485060;
}
