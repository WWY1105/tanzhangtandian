.header{
  width: 100%;
  height: 402rpx;
  position: relative;
  overflow: hidden;
}
.headerbg {
  width: 100%;
  height: 402rpx;
  position: absolute;
}
.all {
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  top: 70rpx;
  margin: auto;
}
.all_title {
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
}
.all_num {
  font-size: 88rpx;
  font-weight: 600;
}
.header_bottom {
  display: flex;
  justify-content: space-around;
  width: 100%;
  position: absolute;
  bottom: 26rpx;
}
.rewardTitle{
  font-size: 24rpx;
  color: #ffffff;
  margin-bottom: 8rpx;
}
.rewardInfo {
  width: 220rpx;
  height: 88rpx;
  border-radius: 5px;
  background-color: rgba(142, 27, 18, 0.44);
  overflow: hidden;
  color: #ffffff;
}
.rewardNum {
  font-size: 28rpx;
  font-weight: 600; 
  margin-left: 32rpx;
  margin-top: 14rpx;
}
.finishTask {
  font-size: 20rpx;
  margin-left: 32rpx;
}
.search {
  position: absolute;
  top: 54rpx;
  right: 16rpx;
  font-size: 24rpx;
  color: #ffffff;
}
.content {
  width: 686rpx;
  margin: auto;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding-bottom: 30px;
}
.contentTitle {
  font-size: 36rpx;
  font-weight: 500;
  color: #232832;
}
.contentBox {
  margin-top: 10rpx;
  padding: 0 36rpx;
  width: 622rpx;
  border-radius: 10px;
  box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.05);
  border: solid 0.5px #eaeaea;
  background-color: #ffffff;
  padding-bottom: 30rpx;
  margin-bottom: 50rpx;
}

.line {
  width: 622rpx;
  height: 1px;
  border-radius: 0.5px;
  margin-top: 20rpx;
  background-color: #d8d8d8;
}
.time {
  font-size: 24rpx;
  color: #232832;
  margin-top: 30rpx;
}
.user {
  display: flex;
  margin-top: 20rpx;
}
.userImg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100px;
}
.userInfo {
  height: 80rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.username {
  font-size: 32rpx;
  color: #000000;
}
.userBottom {
  display: flex;
  justify-content: space-between;
  width: 522rpx;
  align-items: center;
}
.grade {
  width: 120rpx;
  height: 32rpx;
  border-radius: 7.5px;
  /* border-style: solid;
  border-width: 1px;
  border-image-source: linear-gradient(to bottom, #f6eac4, #ead092);
  border-image-slice: 1; */
  border: 1px solid #ead092;
  background-image: linear-gradient(105deg, #595959, #222222), linear-gradient(to bottom, #f6eac4, #ead092);
  background-origin: border-box;
  background-clip: content-box, border-box;
  font-size: 24rpx;
  text-align: center;
  color: #ead092;
  line-height: 32rpx;
}
.profit {
  font-size: 32rpx;
  color: #232832;
}
.hoverBtn {
  background-color: #fff;
  color: #ee5144;
}