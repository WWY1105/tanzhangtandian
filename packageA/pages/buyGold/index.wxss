/* packageA/pages/buyGold/index.wxss */
pages{
  background-color: #fcfcfc;
}
.header {
  width: 686rpx;
  height: 220rpx;
  border-radius: 10px;
  margin: auto;
  margin-top: 20rpx;
  position: relative;
}
.headerBg {
  height: 100%;
  width: 100%;
}
.header_top {
  position: absolute;
  top: 30rpx;
  width: 622rpx;
  margin: 0 32rpx;
  display: flex;
  justify-content: space-between;
}
.header_top_left {
  font-size: 36rpx;
  font-weight: 600;
  text-shadow: 0 1px 1px #f0973a;
  color: #fff;
}
.header_top_right {
  display: flex;
  align-items: center;
}
.header_top_right image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 12rpx;
  vertical-align: middle;
}
.header_top_right button{
  font-size: 24rpx;
  color: #ffffff;
  height: 30rpx;
  line-height: 30rpx;
  padding: 5rpx;
  background-color: rgba(255, 255, 255, 0);
  vertical-align: middle;
}
.header_top_right button::after {
  border: 0;
}
.header_bottom {
  position: absolute;
  bottom: 30rpx;
  width: 622rpx;
  margin: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.header_bottom_left {
  font-size: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 1px 1px #f0973a;
}
.header_bottom_right {
  display: flex;
  align-items: center;
  padding: 32rpx 0 0;
}
.header_bottom_right view{
  font-size: 28rpx;
  color: #ffffff;
}
.header_bottom_right image{
  height: 28rpx;
  width: 28rpx;
}
.buyBox {
  width: 622rpx;
  min-height: 510rpx;
  border-radius: 10px;
  box-shadow: 0 3px 10px 0 rgba(0, 0, 0, 0.1);
  background-color: #ffffff;
  margin: auto;
  margin-top: 40rpx;
  padding: 0 32rpx; 
  padding-bottom: 40rpx;
  overflow: hidden;
}
.buyTop {
  width: 598rpx;
  padding-left: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-left: 4rpx solid #f08627;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.buyTitle {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}
.buyTop_right {
  display: flex;
  align-items: center;
}
.buyTop_right image{
  width: 28rpx;
  height: 28rpx;
}
.buyTop_right view{
  font-size: 24rpx;
  color: #999999;
  margin-left: 2px;
}

.buySelect {
  width: 558rpx;
  height: 120rpx;
  border-radius: 10px;
  margin-top: 20rpx;
  border: solid 1px #e5e7e9;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx; 
  font-size: 36rpx;
  color: #333;
  position: relative;
}

.tips {
  width: 136rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  border-top-left-radius: 10px;
  border-bottom-right-radius: 10px;
  background-color: #e40c0c;
  position: absolute;
  top: -1px;
  left: -1px;
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
}
.active {
  border: solid 1px #ed752e;
  color: #ed752e;
}
.bgImg {
  width: 100%;
  position: absolute;
  z-index: -1;
  top: 800rpx;
}
.brandBox {
  width: 622rpx;
  padding: 30rpx 32rpx 0;
  border-radius: 10px;
  margin: auto;
  margin-top: 376rpx;
  background-color: #ffffff;
}
.brandTop {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}
.brand {
  padding: 20rpx 0;
  border-bottom: 1px solid #d8d8d8;
}
.brandName {
  font-size: 30rpx;
  font-weight: 550;
  color: #333;
}
.shopName {
  font-size: 28rpx;
  color: #999;
}
.more {
  display: flex;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}
.more view{
  font-size: 28rpx;
  color: #999999;
}
.more image{
  width: 14rpx;
  height: auto;
  margin-left: 10rpx;
  margin-top: 5rpx;
}
.buyText {
  width: 622rpx;
  padding: 30rpx 32rpx;
  margin: auto;
  margin-top: 40rpx;
  background-color: #ffffff;
}
.buyText view{
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}
.buyText text{
  font-size: 28rpx;
  color: #999;
}
.bottomBox {
  height: 228rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
}
.bottomBox_top {
  width: 686rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 32rpx;
  box-shadow: 0 -2px 8px 0 rgba(0, 0, 0, 0.1);
  background-color: #ffffff;
  display: flex;
  align-items: center;
}
.bottomBox_top_left {
  display: flex;
  align-items: center;
}
.radioBox {
  width: 28rpx;
  height: 28rpx;
  border-radius: 100px;
  border: 1px solid #ed7730;
  position: relative; 
}
.radio {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 100px;
  background: #ed7730;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}
.radioText {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #999999;
}
.bottomBox_top_right {
  font-size: 28rpx;
  color: #3478f6;
}
.bottomBox_bottom {
  width: 686rpx;
  height: 148rpx;
  padding: 0 32rpx;
  box-shadow: 0 -2px 8px 0 rgba(0, 0, 0, 0.1);
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bottomBox_bottom_left {
  display: flex;
  align-items: baseline;
}
.bottomBox_bottom_left view{
  font-size: 28rpx;
  color: #999999;
}
.bottomBox_bottom_left text{
  font-size: 60rpx;
  color: #333;
}
.payBtn {
  width: 286rpx;
  height: 108rpx;
  border-radius: 5px;
  text-align: center;
  line-height: 108rpx;
  box-shadow: 0 3px 10px 0 rgba(237, 119, 48, 0.5);
  background-image: linear-gradient(to right, #f19a4f, #ed762f);
  font-size: 36rpx;
  color: #ffffff;
}

.goldTextPop {
  width: 570rpx;
  border-radius: 8px;
  background-color: #ffffff;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  height: 1000rpx;
  font-size: 28rpx;
  color: #333333;
}

.goldRuleImg {
  width: 100%;
}
.ruleContent {
  margin: auto;
  width: 510rpx;
  height: 665rpx;
}
.ruleContent2 {
  margin: auto;
  width: 510rpx;
  height: 665rpx;
}
.ruleContent view{
  margin-bottom: 66rpx;
}
.closeBtn {
  width: 376rpx;
  height: 86rpx;
  line-height: 86rpx;
  border-radius: 21.5px;
  font-size: 28rpx;
  background-image: linear-gradient(to right, #ffe854, #ffcd2a);
  margin: auto;
  margin-top: 28rpx;
  text-align: center;
  color: #000000;
}
.ruleContent2 image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.ruleText {
  display: flex;
  margin-bottom: 66rpx;
}


.modalbox {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  z-index: 999;
  background:rgba(0, 0, 0, 0.6);
}

.modal2 {
  text-align: center;
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
  width: 592rpx;
  height: 300rpx;
  border-radius: 5px;
  padding-top: 20rpx; 
  background-color: #ffffff;
  color: #000000;
}
.modal2 .text {
  font-size: 32rpx;
  min-height: 130rpx;
  letter-spacing: 0.3px;
  text-align: center;
  padding: 36rpx 20rpx;
  color: #999;
}
.modal2 button {
  display: inline-block;
  width: 50%;
  font-size: 40rpx;
  font-weight: 500;
  letter-spacing: 0.4px;
  border: none;

}

.noHave {
  margin: 0 auto;
  margin-top: 60rpx;
  display: block;
  width: 490rpx;
  height: auto;
}