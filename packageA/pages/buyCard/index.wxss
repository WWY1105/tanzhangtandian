/* packageA/pages/buyCard/index.wxss */
page {
  background-color: #f3f3f3;
}
.header{
  padding: 40rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.card {
  width: 210rpx;
  height: 140rpx;
  border-radius: 7.7px;
  position: relative;
  margin-left: 30rpx;
}
.cardBg {
  width: 210rpx;
  height: 140rpx;
  border-radius: 7.7px;
  position: absolute;
  background: #ccc;
  top: 0;
  left: 0;
}
.amount {
  position: absolute;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5), 0 1px 1px rgba(0, 0, 0, 0.5), 0 1px 1px rgba(0, 0, 0, 0.5);
  font-size: 32rpx;
  font-weight: bold;
  color: #ffec92;
  bottom: 29rpx;
  left: 12rpx;
}
.cardType {
  position: absolute;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5), 0 1px 1px rgba(0, 0, 0, 0.5), 0 1px 1px rgba(0, 0, 0, 0.5);
  font-size: 20rpx;
  font-weight: bold;
  color: #ffec92;
  bottom: 7rpx;
  left: 12rpx;
}
.tipsBox {
  position: absolute;
  top: 8rpx;
  left: -14rpx;
  width: 142rpx;
  height: 60rpx;
}
.tipsBox image{
  width: 142rpx;
  height: auto;
  position: absolute;
  top: 0;
}
.tipsBox view{
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
  height: 42rpx;
  text-align: center;
}

.header_right {
  width: 456rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 32rpx;
}
.cardText {
  width: 456rpx;
  font-size: 28rpx;
  color: #333333;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical
}
.cardPrice {
  font-size: 36rpx;
  font-weight: bold;
  color: #ed772f;
}
.cardPrice text{
  font-size: 28rpx;
  font-weight: 500;
  color: #999999;
  margin-left: 10rpx;
  text-decoration: line-through;
}

.selectBox {
  width: 686rpx;
  margin: auto;
  padding-top: 20rpx;
  padding-bottom: 40rpx;
  border-top: 1px solid #eaeaea;
  background: #fff;
}
.selectBox_title {
  font-size: 32rpx;
  color: #333333;
}
.select {
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 10rpx;
  border-radius: 2px;
  border: solid 1px #999999;
  background-color: #ffffff;
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #999999;
  display: inline-block;
}
.active {
  border-color:#ed772f;
  color: #ed772f;
}

.cardNumBox {
  height: 104rpx;
  width: 686rpx;
  margin: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-top: 1px solid #eaeaea;
}
.cardNumBox_left {
  display: flex;
  align-items: center;
}
.cardNumBox_title {
  font-size: 32rpx;
  color: #333333;
}
.cardNum {
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999999;
}
.cardNumBox_right {
  width: 224rpx;
  height: 64rpx;
  border-radius: 16px;
  border: solid 0.5px #cccccc;
  background-color: #ffffff;
}
.minus,.add {
  width: 68rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-weight: bold;
  font-size: 50rpx;
  display: inline-block;
  color: #333333;
  vertical-align: middle;
}
.num {
  width: 86rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-weight: bold;
  font-size: 36rpx;
  display: inline-block;
  color: #333333;
  border-left: solid 0.5px #cccccc;
  border-right: solid 0.5px #cccccc;
  vertical-align: middle;
}
.user {
  margin-top: 20rpx;
  width: 686rpx;
  padding: 0 32rpx;
  background: #fff;
}
.userName {
  height: 84rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #333333;
  border-bottom: 1px solid #eaeaea;
}
.phoneBox {
  height: 84rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #333333;
}
.phoneBox .phoneNum{
  width: 288rpx;
  font-weight: 500;
  text-align: right;
}
.phoneBox button{
  width: 335rpx;
  font-weight: 500;
  font-size: 32rpx;
  color: #999999;
  border: none;
  margin: 0;
  padding: 0;
}

.buyBox {
  position: fixed;
  bottom: 0;
  width: 686rpx;
  height: 100rpx;
  padding: 0 32rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.allPrice {
  font-size: 32rpx;
  color: #333333;
}
.allPrice text{
  font-size: 48rpx;
  font-weight: bold;
  color: #ed772f;
  vertical-align: bottom;
}
.buyBtn {
  width: 288rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 20px;
  box-shadow: 0 5px 10px 0 rgba(237, 119, 48, 0.5);
  background-image: linear-gradient(to left, #ed762f, #f0994e);
  font-size: 36rpx;
  font-weight: 500;
  color: #ffffff;
}

.modalbox {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  z-index: 999;
  background:rgba(0, 0, 0, 0.6);
}

.modal {
  text-align: center;
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
  width: 592rpx;
  height: 300rpx;
  border-radius: 5px;
  padding-top: 20rpx; 
  background-color: #ffffff;
  color: #000000;
}

.modal .text {
  font-size: 32rpx;
  min-height: 130rpx;
  letter-spacing: 0.3px;
  text-align: center;
  padding: 36rpx 20rpx;
  color: #999;
}
.modalbox_btn {
  border-top:0.5px solid #ccc;
  position:absolute;
  bottom:0;
  margin:auto;
  left:0;
  right:0;

}
.modal button {
  display: inline-block;
  width: 50%;
  font-size: 40rpx;
  font-weight: 500;
  letter-spacing: 0.4px;
  border: none;

}

.cardRules {
  width: 686rpx;
  padding: 32rpx;
  margin-top: 40rpx;
  background: #fff;
  margin-bottom: 150rpx;
}
.contentBox {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #000000;
}
.contentTitle {
  font-size: 32rpx;
  font-weight: bold;
}
.content {
  color: #999;
}
.tulesTitle {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}