  <button class='inbottom' bindtap='submittext' wx:if='{{posts.recipients==0 && posts.state != "1002"}}'>立即邀请</button>
  <button class='continue' bindtap='submittext'wx:if='{{posts.recipients>0 || (posts.recipients==0 && posts.state == "1002")}}'>继续发优惠劵,还可赚返佣</button>
