<view style="padding-top:{{bar_Height  + 45}}px;">
  <navigationBar title='分享' show_bol='{{true}}'></navigationBar>
  <view class='content'>
    <view class='header'>
      <view class='time_box'>
        <image class='leftline' src='../../img/line.png'></image>
        <view class='time'>限时 23:59:59</view>
        <image class='rightline' src='../../img/line.png'></image>
      </view>
      <view class='intop' style='background-image: url({{intop}})'>
       <text class='ren'>10</text>
      </view>
      <view class='inbottom'>瓜分 <text class='unit'>¥</text><text class='money'>10</text> 现金返现</view>
    </view>
    <video id='myVideo' class='video' src='http://gslb.miaopai.com/stream/CG8CWFKnSeTMvt~XYM7Qfy-Ao3cuUBeeScnB2Q__.mp4?vend=miaopai&amp;ssig=eff3dfc2a845daa4286cb3df0d79e6da&amp;time_stamp=1552642226739&amp;mpflag=32' bindtimeupdate="timeupdate" bindpause='stopplay' bindended='stopplay' show-center-play-btn="{{false}}">
      <cover-view class='play' bindtap='play' wx:if='{{playimg}}'>
        <cover-image src='../../img/play0.png'></cover-image>
      </cover-view>
    </video>
    <view class='invitation_content'>
      <view class='invitation_text'>福利内容</view>
      <view class='invitation_bottom'>
        <view class='quan'>
          <view class='quan_top'>20元代金券</view>
          <view class='quan_bottom'>
            <view>
              <view class='term'>• 2018/08/30 — 2018/08/30 有效</view>
              <view class='limit'>• 满200元可用</view>
            </view>
            <view class='method'>使用方法</view>
          </view>
        </view>
      </view>
    </view>
    <view class='consumption'>
      <view class='consumption_img' style='background-image: url({{fanyong}})'>
        <text class='return'>10%</text>
      </view>
      <view class='consumption_text'>领取优惠券的好友，到店消费并且使用自助扫码买单，即可获得好友消费额10%的返佣</view>
    </view>
    <view class='friend'>
      <view class='friend_title'>已领取的好友</view>
      <view class='friend_list'>
        <view class='who' wx:for="{{[1, 2, 3, 4, 5]}}" wx:key='key'>
          <image class='userimg' src='{{userimg}}'></image>
          <text class='username'>Gleb Ivanovich</text>
          <text class='friend_time'>2019-03-08 12:03:49</text>
        </view>
      </view>
      <view class='friend_btn'><text bindtap='toDetail'>查看更多>></text></view>
    </view>
  </view>
  <view class='bottom_btn'>
    <button class='wxbtn' open-type='share' style='background-image: url({{wx}})'><text>发送给好友</text></button>
    <button class='pyqbtn' wx:if='{{btnshow}}' bindtap='clickbtn' style='background-image: url({{pyq}})'><text>发到朋友圈</text></button>
    <button class='pyqbtn' wx:if='{{!btnshow}}' open-type="getPhoneNumber"  bindgetphonenumber='getPhoneNumber' style='background-image: url({{pyq}})'><text>发到朋友圈</text></button>
  </view>
  <view class='home' bindtap='toHome'>
    <image src='../../img/home.png'></image>
    <view class='home_text'>首页</view>
  </view>
  <view class='mask' wx:if='{{mask}}' catchtouchmove="preventTouchMove" style="margin-top:{{bar_Height  + 43}}px;">
    <view class='mask_title' >朋友圈分享</view>
    <view class='mask_copbox'>
      <text class='mask_text'>{{text}}</text>
      <view class='mask_copbtn' bindtap='copy'>点击复制转发文案</view>
    </view>
    <view class='selectimg'>
      <view class='oneimg' data-key='{{index}}' style='background-image: url({{userimg}})' bindtap='tapimg' wx:for="{{arr}}" wx:key='{{index}}'>
        <image wx:if='{{item.swich}}' src='../../img/select.png' mode='aspectFit'></image>
        <image wx:if='{{!item.swich}}' src='../../img/noselect.png' mode='aspectFit'></image>
      </view>
    </view>
    <view class='mask_bottom'> 
      <view class='closemask' bindtap='close'>取消选择</view>
      <view class='saveimg' bindtap='saveimg' style='background-image: url({{save}})'>保存图片</view>
    </view>
  </view>
</view>
