.content {
  width: 100%;
  background-color: #232832;
  overflow: hidden;
}
.header {
  overflow: hidden;
  padding: 0 32rpx 258rpx;
  background-repeat: no-repeat;
  background-size: cover;
}
.time_box {
  text-align: center;
  margin: 38rpx 0;
}
.leftline {
  width: 188rpx;
  height: 22rpx;
  display: inline-block;
}
.rightline {
  width: 188rpx;
  height: 22rpx;
  display: inline-block;
  transform:rotate(180deg);
}

.top_box {
  position: relative;
  text-align: center;
}
.intop {
  width: 578rpx;
  font-size: 110rpx;
  font-weight: 600;
  background-repeat: no-repeat;
  margin: auto;
  text-align: left;
  background-size: cover;
  line-height: 130rpx;
  text-shadow: 0 3px 5px rgba(0, 0, 0, 0.5);
}
.ren { 
  margin-left: 183rpx;
  letter-spacing: -10rpx;
}
.yaoqin {
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  font-size: 18px;
  font-weight: 500;
}
.xiaofei {
  border-radius: 6px;
  border: solid 0.5px #fff;
  font-size: 14px;
  font-weight: 300;
  width: 364rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 16rpx;
  margin: 20rpx auto;
  opacity: 0.8;
}
.time {
  font-size: 16px;
  margin: 0 4px;
  display: inline-block;
}
.inbottom {
  text-align: center;
  font-size: 20px;
  font-weight: 500;
  border-radius: 6px;
  box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.5);
  margin: 578rpx 16rpx 0;
  color: #232832;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #faef53;
}

.fenxiang {
  width: 622rpx;
  height: 300rpx;
  border-radius: 6px;
  border: solid 1px #434850;
  background-color: #232832;
  margin: auto;
  padding: 0 32rpx;
  margin-top: -150rpx;
}
.fenxiang_title {
  font-size: 14px;
  text-align: center;
  margin: 20rpx 0;
}
.fenxiang_copbox {
  margin: 40rpx 0;
}
.fenxiang_img {
  width: 80rpx;
  height: 80rpx;
  border: solid 1px #ffffff;
  border-radius: 50px;
  vertical-align: middle;
}
.fenxiang_text {
  font-size: 14px;
  width: 484rpx;
  font-family: HiraMaruPro-W4;
  display: inline-block;
  margin-left: 40rpx;
  vertical-align: middle;
}
.exchange {
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-top: 1px solid #434850;
}
.exchange image {
  width: 25.4rpx;
  height: 23.4rpx;
  vertical-align: middle;
}
.exchange text {
  font-size: 14px;
  margin-left: 5px;
  vertical-align: middle;
}

.video {
  width: 100%;
  position: relative;
  margin-top: 40rpx;
}
.fanxian {
  width: 630rpx;
  height: 140rpx;
  margin: auto;
  display:block;
  margin-top: 74rpx;
}
.fanxian_text {
  font-size: 16px;
  text-align: center;
  margin-top: 20rpx;
}


.friend {
  position: relative;
  width: 686rpx;
  min-height: 568rpx;
  margin-top: 118rpx;
  border: solid 1px #5E6269;
  border-radius: 15px;
  text-align: center;
  color: #ffffff;
}
.friend_title {
  width: 260rpx;
  font-size: 36rpx;
  font-weight: 500;
  top: -40rpx;
  color: #ffffff;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  text-align: center;
  background-color: #232832;
}
.friend_list {
  text-align: left;
  padding: 40rpx 32rpx;
  font-size: 28rpx;
}
.who {
  line-height: 60rpx;
  margin-top: 20rpx;
}
.userimg {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50px;
  vertical-align: middle;
}
.username {
  margin-left: 20rpx;
}
.friend_time {
  float: right;
}
.friend_btn {
  border-top: 1px solid #5E6269;
  width: 622rpx;
  height: 80rpx;
  font-size: 14px;
  color: #ffffff;
  line-height: 80rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}



.home {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50px;
  text-align: center;
  background-color: #faef53;
  position: fixed;
  right: 40rpx;
  bottom: 286rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.home image {
  width: 40rpx;
  height: 40rpx;
}
.home_text {
  font-size: 12px;
  font-weight: 500;
  color: #232832;
}

.play{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 366rpx;
  height: 100rpx;
}

.method {
  width: 628rpx;
  border-radius: 6px;
  border: solid 1px #434850;
  margin: 62rpx auto 0;
  padding: 0 34rpx;
  font-size: 14px;
  margin-bottom: 100rpx;
}
.method_title {
  font-family: TRENDS;
  font-size: 20px;
  text-align: center;
  margin: 20rpx 0;
}
.method_top {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.method_bottom {
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 60rpx;
}
.lingqu {
  width: 190rpx;
  height: 200rpx;
}
.lingqu_text {
  width: 340rpx;
  height: 80rpx;
}
.hongbao {
  width: 196rpx;
  height: 220rpx;
}
.hongbao_text {
  width: 340rpx;
  height: 80rpx;
}

