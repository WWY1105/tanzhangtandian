.content {
  width: 686rpx;
  padding: 0 32rpx;
  background-color: #232832;
}
.header {
  overflow: hidden;
  height: 398rpx;
  margin-bottom: 28rpx;
}
.time_box {
  text-align: center;
  margin: 38rpx 0;
}
.leftline {
  width: 188rpx;
  height: 22rpx;
  display: inline-block;
}
.rightline {
  width: 188rpx;
  height: 22rpx;
  display: inline-block;
  transform:rotate(180deg);
}
.intop {
  width: 100%;
  font-size: 134rpx;
  font-weight: 600;
  background-repeat: no-repeat;
  background-size: contain;
  color: #faef53;
  line-height: 139rpx;
  text-shadow: 2px 2px 0 #232832, 3px 3px 0 rgba(255, 255, 255, 0.5);
}
.ren {
  margin-left: 120rpx;
}

.time {
  font-size: 16px;
  margin: 0 4px;
  display: inline-block;
}
.inbottom {
  text-align: center;
  font-size: 20px;
  font-weight: 500;
  color: #ffffff;
}
.unit {
  font-size: 30px;
  color: #faef53;
}
.money {
  font-size: 60px;
  font-weight: 500;
  color: #faef53;
}
.video {
  width: 100%;
  position: relative;
}
.invitation_content {
  padding-top: 28rpx;
  margin-top: -8rpx;
  border: 1px solid #5E6269;
  border-top: none;
  padding-bottom: 58rpx;
  border-bottom-left-radius: 15px;
  border-bottom-right-radius: 15px;
}
.invitation_text {
  font-size: 18px;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
}
.invitation_bottom {
  margin-top: 20rpx;
  margin-left: 32rpx;
}
.quan {
  width: 622rpx;
  height: 154rpx;
}
.quan_top {
  font-size: 20px;
  font-weight: 500;
  color: #343235;
  height: 90rpx;
  background-color: #F6EFE9;
  text-align: center;
  line-height: 113rpx;
}
.quan_bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
  background-color: #B8A682;
  height: 64rpx;
}
.term,.limit {
  font-size: 10px;
  color: #ffffff;
}
.method {
  width: 154rpx;
  height: 44rpx;
  border-radius: 11px;
  background-color: #ffffff;
  font-size: 12px;
  font-weight: 500;
  color: #b8a682;
  text-align: center;
  line-height: 44rpx;
}

.consumption {
  width: 610rpx;
  margin-top: 186rpx;
  border-radius: 15px;
  text-align: center;
  padding: 0 38rpx;
  border: 1px solid #5E6269;
  padding-bottom: 48rpx;
}
.consumption_img {
  background-repeat: no-repeat;
  background-size: contain;
  margin-left: 16rpx;
  width: 601.2rpx;
  height: 183.6rpx;
  line-height:264rpx;
  font-size:85rpx;
  transform: rotateZ(-5deg);
  margin-top: -107rpx;
}
.return {
  margin-left:32rpx;
  color: #faef53;
  text-shadow: 2px 2px 0 #232832, 3px 3px 0 rgba(255, 255, 255, 0.5);
}
.consumption_text {
  text-align: left;
  margin-top: 95rpx;
  font-size: 14px;
  line-height: 2.14;
  color: #ffffff;
}

.friend {
  position: relative;
  width: 686rpx;
  min-height: 568rpx;
  margin-top: 118rpx;
  border: solid 1px #5E6269;
  border-radius: 15px;
  text-align: center;
  color: #ffffff;
}
.friend_title {
  width: 260rpx;
  font-size: 36rpx;
  font-weight: 500;
  top: -40rpx;
  color: #ffffff;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  text-align: center;
  background-color: #232832;
}
.friend_list {
  text-align: left;
  padding: 40rpx 32rpx;
  font-size: 28rpx;
}
.who {
  line-height: 60rpx;
  margin-top: 20rpx;
}
.userimg {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50px;
  vertical-align: middle;
}
.username {
  margin-left: 20rpx;
}
.friend_time {
  float: right;
}
.friend_btn {
  border-top: 1px solid #5E6269;
  width: 622rpx;
  height: 80rpx;
  font-size: 14px;
  color: #ffffff;
  line-height: 80rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.bottom_btn {
  height: 230rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #232832;
  background-color: #232832;
  align-items: center;
}
.bottom_btn text{
  padding-left: 40rpx;
}
.wxbtn,.pyqbtn {
  width: 280rpx;
  height: 68rpx;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 68rpx;
  border-radius: 17px;
  box-shadow: 0 2px 7px 0 rgba(250, 239, 83, 0.5);
  background-color: #faef53;
  background-repeat: no-repeat;
  background-size: 40rpx;
  background-position: 36rpx center;
  text-align: center;
}

.home {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50px;
  text-align: center;
  background-color: #faef53;
  position: fixed;
  right: 40rpx;
  bottom: 286rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.home image {
  width: 40rpx;
  height: 40rpx;
}
.home_text {
  font-size: 12px;
  font-weight: 500;
  color: #232832;
}

.mask {
  height: 100%;
  width: 100%;
  position: fixed;
  overflow: hidden;
  top: -2px;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.mask_title {
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  color: #ffffff;
  margin-top: 26rpx;
}
.mask_copbox {
  width: 622rpx;
  height: 260rpx;
  position: absolute;
  top: 90rpx;
  left: 0;
  right: 0;
  margin: auto;
  padding: 30rpx 32rpx 0;
  border: solid 1px rgba(255, 255, 255, 0.1);
  background-color: #232832;
  overflow: hidden;
}
.mask_text {
  font-size: 14px;
  color: #ffffff;
}
.mask_copbtn {
  position: absolute;
  bottom: 0;
  width: 622rpx;
  height: 80rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  font-size: 14px;
  text-align: center;
  line-height: 80rpx;
  color: #faef53;
  text-decoration: underline;
}
.selectimg {
  width: 686rpx;
  min-height: 220rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 420rpx;
  margin: auto;
}
.oneimg {
  width: 220rpx;
  height: 220rpx;
  margin: 5rpx;
  display: inline-block;
  background-repeat: no-repeat;
  background-size: contain;
  position: relative;
}
.oneimg image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 5px;
  right: 5px;
  border-radius: 50px;
}
.mask_bottom {
  position: fixed;
  bottom: 38rpx;
  left: 0;
  right: 0;
  width: 686rpx;
  height: 80rpx;
  margin: auto;
}
.closemask {
  display: inline-block;
  width: 254rpx;
  height: 80rpx;
  border-radius: 20px;
  box-shadow: 0 2px 7px 0 rgba(250, 239, 83, 0.5);
  border: solid 1px #faef53;
  text-align: center;
  line-height: 80rpx;
  font-size: 14px;
  font-weight: 500;
  color: #faef53;
}
.saveimg {
  width: 373rpx;
  height: 82rpx;
  display: inline-block;
  border-radius: 20px;
  box-shadow: 0 2px 7px 0 rgba(250, 239, 83, 0.5);
  background-color: #faef53;
  font-size: 16px;
  font-weight: 500;
  color: #232832;
  text-align: center;
  line-height: 82rpx;
  background-repeat: no-repeat;
  background-size: 40rpx;
  padding-left: 44rpx;
  margin-left: 12rpx;
  background-position: 116rpx center;
}

.play{
  position: relative;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 366rpx;
  height: 100rpx;
}
