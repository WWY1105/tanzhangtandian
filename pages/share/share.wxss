.content {
  width: 686rpx;
  padding: 0 32rpx;
  background-color: #232832;
}
.header {
  overflow: hidden;
  height: 398rpx;
}
.intop {
  margin-top: 10px;
  width: 500rpx;
  height: 130rpx;
  font-size: 70rpx;
  font-weight: 600;
  background-repeat: no-repeat;
  background-size: contain;
  margin-left: 102rpx;
  text-align: center;
  color: #faef53;
  line-height: 139rpx;
  text-shadow: 2px 2px 0 #232832, 3px 3px 0 rgba(255, 255, 255, 0.5);
  transform: rotateZ(-5deg);
}
.ren {
  margin-left: -76rpx;
}
.inbottom {
  margin-top: 10px;
  width: 686rpx;
  height: 108rpx;
  font-size: 100rpx;
  font-weight: 600;
  background-repeat: no-repeat;
  background-size: contain;
  text-align: center;
  color: #fff;
  line-height: 103rpx;
  text-shadow: 2px 2px 0 #232832, 3px 3px 0 rgba(255, 255, 255, 0.5);
  transform: rotateZ(-5deg);
}
.yuan {
  margin-left: -16rpx;
}
.time {
  background-repeat: no-repeat;
  background-size: contain;
  text-align: center;
  font-weight: 500;
  height: 50rpx;
  width: 354rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: black;
  margin-top: 6rpx;
  margin-left: 213rpx;
  transform: perspective(74rpx) rotateZ(-7deg) rotateY(3deg);
}
.video {
  width: 100%;
}
.invitation_content {
  padding-top: 28rpx;
  margin-top: -8rpx;
  border: 1px solid #5E6269;
  border-top: none;
  padding-bottom: 58rpx;
  border-bottom-left-radius: 15px;
  border-bottom-right-radius: 15px;
}
.invitation_text {
  font-size: 14px;
  line-height: 2.14;
  color: #ffffff;
  padding: 0 32rpx;
}
.invitation_bottom {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
}
.step {
  width: 204rpx;
  height: 276rpx;
  border-radius: 5px;
  box-shadow: 0 5px 10px 0 #000000;
  background-color: #ffffff;
  display: inline-block;
  text-align: center;
}
.step_img {
  width: 100rpx;
  height: 176rpx;
  margin-top: 20rpx;
}
.step_text {
  font-size: 28rpx;
  color: #000000;
  margin-top: 20rpx;
}

.consumption {
  width: 610rpx;
  margin-top: 186rpx;
  border-radius: 15px;
  text-align: center;
  padding: 0 38rpx;
  border: 1px solid #5E6269;
  padding-bottom: 48rpx;
}
.consumption_img {
  background-repeat: no-repeat;
  background-size: contain;
  margin-left: 16rpx;
  width: 601.2rpx;
  height: 183.6rpx;
  line-height:264rpx;
  font-size:85rpx;
  transform: rotateZ(-5deg);
  margin-top: -107rpx;
}
.return {
  margin-left:32rpx;
  color: #faef53;
  text-shadow: 2px 2px 0 #232832, 3px 3px 0 rgba(255, 255, 255, 0.5);
}
.consumption_text {
  text-align: left;
  margin-top: 95rpx;
  font-size: 14px;
  line-height: 2.14;
  color: #ffffff;
}

.friend {
  position: relative;
  width: 686rpx;
  min-height: 568rpx;
  margin-top: 118rpx;
  border: solid 1px #5E6269;
  border-radius: 15px;
  text-align: center;
  color: #ffffff;
}
.friend_title {
  width: 260rpx;
  font-size: 36rpx;
  font-weight: 500;
  top: -40rpx;
  color: #ffffff;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  text-align: center;
  background-color: #232832;
}
.friend_list {
  text-align: left;
  padding: 40rpx 32rpx;
  font-size: 28rpx;
}
.who {
  line-height: 60rpx;
  margin-top: 20rpx;
}
.userimg {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50px;
  vertical-align: middle;
}
.username {
  margin-left: 20rpx;
}
.friend_time {
  float: right;
}
.friend_btn {
  border-top: 1px solid #5E6269;
  width: 622rpx;
  height: 80rpx;
  font-size: 14px;
  color: #ffffff;
  line-height: 80rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.bottom_btn {
  height: 230rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #232832;
  background-color: #232832;
  align-items: center;
}
.bottom_btn text{
  padding-left: 40rpx;
}
.wxbtn,.pyqbtn {
  width: 280rpx;
  height: 68rpx;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 68rpx;
  border-radius: 17px;
  box-shadow: 0 2px 7px 0 rgba(250, 239, 83, 0.5);
  background-color: #faef53;
  background-repeat: no-repeat;
  background-size: 40rpx;
  background-position: 36rpx center;
  text-align: center;
}

.home {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50px;
  text-align: center;
  background-color: #faef53;
  position: fixed;
  right: 40rpx;
  bottom: 286rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.home image {
  width: 40rpx;
  height: 40rpx;
}
.home_text {
  font-size: 12px;
  font-weight: 500;
  color: #232832;
}

.mask {
  height: 100%;
  width: 100%;
  position: absolute;
  overflow: hidden;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.mask_title {
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  color: #ffffff;
  margin-top: 26rpx;
}
.mask_copbox {
  width: 622rpx;
  height: 260rpx;
  position: absolute;
  top: 90rpx;
  left: 0;
  right: 0;
  margin: auto;
  padding: 30rpx 32rpx 0;
  border: solid 1px rgba(255, 255, 255, 0.1);
  background-color: #232832;
  overflow: hidden;
}
.mask_text {
  font-size: 14px;
  color: #ffffff;
}
.mask_copbtn {
  position: absolute;
  bottom: 0;
  width: 622rpx;
  height: 80rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  font-size: 14px;
  text-align: center;
  line-height: 80rpx;
  color: #faef53;
  text-decoration: underline;
}
.selectimg {
  width: 686rpx;
  min-height: 220rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 420rpx;
  margin: auto;
}
.oneimg {
  width: 220rpx;
  height: 220rpx;
  margin: 5rpx;
  display: inline-block;
  background-repeat: no-repeat;
  background-size: contain;
  position: relative;
}
.oneimg image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 5px;
  right: 5px;
  border-radius: 50px;
}
