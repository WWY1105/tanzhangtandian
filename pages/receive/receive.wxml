<view wx:if="{{init}}">
  <video id='myVideo'  class='{{videoclass}}' src='{{video.url}}' bindended='endplay' show-center-play-btn="{{false}}"   controls="{{true}}" poster="{{posts.video.coverPicUrl}}"  
    bindtimeupdate='timeupdate' title='{{videotitle}}' object-fit="contain">
    <cover-view class='videotitle' wx:if='{{showvideotitle}}'>上海排名第一的火锅店</cover-view>
  </video>
  <!-- <progress wx:if='{{!closebox}}' backgroundColor="#000" percent="{{percent}}" color="#faef53" stroke-width="3" /> -->
  <view style='position:relative;'>
    <view class='videotitle' wx:if='{{closebox || playimg}}'>上海排名第一的火锅店</view>
    <view class='playinfo' wx:if='{{closebox || playimg}}'>
      <view class='playtime'>{{playtime}}</view>     
    </view>
    <image class='tihuan' src='{{posts.video.coverPicUrl}}'  mode='aspectFit' wx:if='{{closebox || playimg}}'></image>
    <view class='playanimat' wx:if='{{animat}}' style='background-image: url({{playanimat}})'></view>
  </view>
  
  
  <view class='frequency'>{{posts.video.playTimes*3}}观看</view>
  <view class='content'>
    
    <view class='title'>{{posts.consume.brand}}({{posts.consume.shopName}})</view>
    <view class='address'>{{posts.consume.address}}</view>

    <view class='poster_box' wx:if="{{posts.poster}}">
      <text>{{posts.poster.content}}</text>
      <view class='user' >
        <image class='userimg' src='{{posts.avatarUrl}}'></image>
        <view class='info'>
          <view class='username'>{{posts.nickname}}</view>
          <view class='time'>{{posts.consume.time}}</view>
        </view>
        <view class='num'>消费 {{posts.consume.amount}}元</view>
      </view>
    </view>

    <view class='middle_box'>
    <view class='Speed_top' wx:if="{{posts.state=='1000'}}">还差{{posts.recipientsLimit-posts.recipientsEffective}}人拆红包，TA可获取{{posts.profitEstimation}}元赏金</view>
      <view class='Speed_top' wx:else>还差{{posts.recipientsLimit-posts.recipientsEffective}}人拆红包，TA可获取{{posts.profitEstimation}}元赏金</view>
      <view class='Speed_text' style='background-image: url(../../img/marks.png)'>共有{{posts.recipients}}人拆了TA发的红包</view>
      <view class='Speed_middle'>
        <image class='friend' src='{{item}}' wx:for="{{posts.avatars}}" wx:key='{{index}}'></image>
      </view>
      <view class='Speed_bottom'>剩余{{posts.time}}</view>
    </view>


    <view class='introduce_title'>
    </view>
    <view wx:for="{{posts.pictures}}">
        <view style='text-align:center;font-size:36rpx;'>{{item.title}}</view>
        <text style='font-size:28rpx;color:#999;'>{{item.content}}</text>
        <image style='width:100%;min-height:50rpx;' src='{{item.url}}'  mode='widthFix'></image>
    </view>
  </view>
  <view class='home' bindtap='toHome'>
    <image src='../../img/home.png'></image>
    <view class='home_text'>首页</view>
  </view>

  <view class='reward' wx:if="{{redbox}}" style='background-image: url({{reward}})'>
    <form report-submit="true" report-submit-timeout="500" bindsubmit='openbox' >
      <input type='text' value='1' style='display:none;'></input>
      <button style='width: 102px;height: 95px;padding:0;opacity:0;' form-type ='submit'></button>
    </form>
  </view>

  

  <view class='redbox' wx:if='{{nohave}}' catchtouchmove='true'>
    <view class='failredboximg' style='background-image: url({{failredbox}})'>
      <view class='failquanbox'>
        <view class='failtitle'>红包已经被抢完了</view>
        <view class='failcontent'>下次活动请早一点来哦</view>
        <view class='failtolook' bindtap='closebox'>下个红包见</view>
      </view>
    </view>
    
  </view>

  <view class='redbox' catchtouchmove='true' wx:if='{{closebox && posts.redEnvelopes}}'>
    <!-- <view class='redboximg2' style='background-image: url({{redboximg2}})' wx:if="{{self}}">
      <image bindtap='closebox' class='closeimg2' src='{{close}}'></image>
      <view>已领过优惠券啦</view>
      <text>优惠券已放入您的账户,买单时将自动抵扣</text>
    </view> -->
    <view class='redboximg' style='background-image: url({{redboximg}})' >
      <image bindtap='closebox' class='closeimg' src='{{close}}'></image>
      <view class='quanbox'>
        <view class='success'>优惠券已到账</view>
        
        <scroll-view class='coupons' scroll-y="{{true}}" >
        <!-- <view class='quan' style='background-image: url({{copconbg}})' wx:for="{{[1,2,3]}}">10元代金券</view> -->
          <view class='quan' style='background-image: url({{copconbg}})' wx:for="{{posts.redEnvelopes}}">
            <view>
              <text>{{item.name}}</text>
            </view>
            <view style='font-size:20rpx;'>{{item.times}}</view>
          </view>        
        </scroll-view>
        <view style='tolook'>买单时将自动抵扣</view>
      </view>
      
    </view>
    
  </view>

  <view class='modalbox' wx:if="{{phonePop}}" catchtouchmove='true'>
    <view class='modal' >
    <view class='text'>
      <view>为了优惠券正常发放</view>
      <view>请同意手机号授权</view>
    </view>
    <view>
      <button plain="true" bindtap='closePop'>拒绝</button>
      <button plain="true" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">手机授权</button>
    </view>
  </view>
  </view>
</view>