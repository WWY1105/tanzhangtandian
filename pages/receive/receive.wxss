page {
  background-color: #232832;
}
.video {
  width: 100%;
}
.content {
  width: 686rpx;
  padding: 0 32rpx;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}
.title {
  font-size: 40rpx;
  font-weight: 500;
  color: #ffffff;
}
.address {
  font-size: 28rpx;
  color: #9a9ca0;
  margin-top: 5px;
}

.top_box {
  height: 440rpx;
  width: 558rpx;
  padding: 0 64rpx;
  position: relative;
  margin-top: 40rpx;
  border: solid 1px #5E6269;
  background-color: #232832;
}
.evaluate {
  text-align: center;
  font-family: FZFSJW-GB1-0;
  font-size: 32rpx;
  line-height: 2.5;
  color: #9a9ca0;
  margin-top: 26rpx;
}
.userimg {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50px;
}
.user {
  height: 128rpx;
  width: 560rpx;
  display: flex;
  position: absolute;
  bottom: 0;
  align-items: center;
  border-top: 1px solid #5E6269;
}
.info {
  margin-left: 20rpx;
}
.username {
  font-size: 28rpx;
  color: #ffffff;
}
.time {
  font-size: 12px;
  color: #9a9ca0;
}
.num {
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  position: absolute;
  right: 0;
}

.middle_box {
  width: 686rpx;
  height: 268rpx;
  margin-top: 40rpx;
  text-align: center;
  border: solid 1px #5E6269;
  background-color: #232832;
}
.Speed_top {
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  margin-top: 30rpx;
}
.Speed_text {
  font-size: 12px;
  color: #ffffff;
  margin-top: 40rpx;
}
.Speed_bottom {
  margin-left: 15rpx;
  margin-top: 20rpx;
}
.friend {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50px;
  margin-left: -15rpx;
}

.introduce_title {
  height: 50rpx;
  margin-top: 60rpx;
  line-height: 50rpx;
  text-align: center;
}
.introduce_title text {
  margin: 0 20rpx;
}
.line {
  width: 120rpx;
  height: 1px;  
  display: inline-block;
  vertical-align: middle;
  background-color: #979797;
}
.introduce_text {
  margin-top: 44rpx;
  font-size: 14px;
  line-height: 2.36;
  color: #ffffff;
}
.introduce_img {
  width: 686rpx;
  height: 364rpx;
  margin: 40rpx 0;
}

.home {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50px;
  text-align: center;
  background-color: #faef53;
  position: fixed;
  right: 40rpx;
  bottom: 286rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.home image {
  width: 40rpx;
  height: 40rpx;
}
.home_text {
  font-size: 12px;
  font-weight: 500;
  color: #232832;
}