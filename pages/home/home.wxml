<view hidden="{{init}}">
  <view>
    <swiper style="height:292rpx;" indicator-dots="{{true}}" autoplay="{{true}}" circular="{{true}}">
      <block>
        <swiper-item>
          <image src="../../img/home/banner.png" class="slide-image"  mode="widthFix"></image>
        </swiper-item>
      </block>
      <block>
        <swiper-item>
          <image src="../../img/home/banner2.png" class="slide-image"  mode="widthFix"></image>
        </swiper-item>
      </block>
      <block>
        <swiper-item>
          <image src="../../img/home/banner3.png" class="slide-image"  mode="widthFix"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class='header'>
    <view class='city' bindtap='redirectCity'>城市: {{location.name}} ▼</view>
    <view class="huan" bindtap="changeShop">
      <image src="../../img/huan3.png" mode='aspectFit'></image>
      <text>换一批</text>
    </view>
  </view>
  <view class='list'>
    <view class='business' wx:for="{{shops}}" data-id='{{item.id}}'>
      <view class='business_top'>
        <view style="display:flex;">
          <image class='logo' src='{{item.logo}}'   lazy-load='true'></image>
          <view class="brandbox">
            <text class='brand'>{{item.name}}</text>
            <text class="address">{{item.address}}</text>
          </view>
        </view>   
        <wxs src=".././distance.wxs" module="tools" />
        <view class="distance" wx:if="{{item.distance}}">{{tools.distance(item.distance)}}</view>    
      </view>
      <view class="yaoqin">转发本店优惠券给<text>{{item.person}}</text>人</view>
      <view class="business_bottom">
        <view class="business_left">
          <view>
            <text class="yuan">悬赏</text>
            <text class="num">{{item.salary}}</text>
            <text class="yuan" style="color:#ee8067;">元</text>
          </view>
          <view class="grade">{{item.salaries[0].name}}{{item.salaries[0].salary}}元 | {{item.salaries[1].name}}{{item.salaries[1].salary}}元</view>
        </view>
        <view class="business_right">
          <view class="time">{{item.time}}</view>
          <view class="btn" bindtap='toShare' data-id="{{item.id}}">接任务</view>
        </view>
      </view>
    </view>
  </view>
  <image class="noimg" src="../../img/notask.png" mode="aspectFit" wx:if="{{!shops}}"></image>
  <view class="model" wx:if="{{firstimg}}">
    <image src="../../img/yingdao.png" mode="aspectFit" bindtap="closeFirstImg"></image>
  </view>
  <view class='modalbox' wx:if="{{phonePop}}" catchtouchmove='true'>
    <view class='modal' >
      <view class='text'>
        <view>为了优惠券正常发放</view>
        <view>请同意手机号授权</view>
      </view>
      <view style='border-top:1px solid #ccc;'>
        <button plain="true" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" style='color:#56bc37;'>手机号授权</button>
      </view>
    </view> 
  </view>
  <auth id="authpop" showImg="{{showImg}}" parentThis="{{parentThis}}"></auth>
</view>