<view style="padding-top:{{bar_Height  + 45}}px;">
  <navigationBar title='首页' show_bol='{{true}}'></navigationBar>
  <view class='header'>
    <view class='city' bindtap="redirectCity">城市: {{location.name}}▼</view>
  </view>
  <view class='list'>
    <view class='business' wx:for="{{shops}}" >
      <view class='business_top'>
        <image class='logo' src='{{item.picUrl}}'   lazy-load='true'></image>
        <view class='title'>
          <text class='brand'>{{item.name}}</text>
          <text class='region'></text>
          <view class='feature'>{{item.cuisineText}}</view>
        </view>
        
      </view>
      <view class='address'>
        <text>地址: </text><text>上海市普陀区中山北路1759号</text>
      </view>
    </view>
  </view>
</view>