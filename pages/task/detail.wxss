  font-size: 48rpx;
  display: inline-block;
}
.stutetop_text view {
  margin-top: 10rpx;
}
.stutetop_time {
  font-size: 28rpx;
  color: #999999;
}
.stutetop_img {
  width: 213rpx;
  height: 192.2rpx;
  float: right;
  margin-right: 16rpx;
  margin-top: 10rpx;
}