.container {
    padding: 0 0 60rpx;
}
.title {
  width: 100%;
  height: 390rpx;
  background-color:#232832;
  background-size: 100% 100%;
  font-size: 40rpx;
  font-weight: 500;
  letter-spacing: 0.3px;
  text-align: center;
  color: #ffffff;
  position: relative;
}
.brandlogo {
  width: 160rpx;
  height: 160rpx;
  display: block;
  border-radius: 5px;
  background-color: #d8d8d8;
  margin: 40rpx auto;
}
.title .detail {
  width: 686rpx;
  margin: 0 32rpx;
  background: #fff;
  height: 146rpx;
  border-radius: 10rpx;
  box-shadow: 0 4px 15px 0 rgba(250, 100, 80, 0.2);
  position: absolute;
  bottom: -30rpx;
  transform: translateY(50%);
  left: 0;
  right: 0;
  padding-top: 40rpx;
}
.title .detail .item {
  width: 33.3%;
  height: 100%;
  font-size: 28rpx;
  color: #000;
  display: inline-block;
}
.title .detail .item  text {
  display: block;
  margin-top: 10rpx;
  font-size: 40rpx;
  font-weight: 500;
  letter-spacing: 0.3px;
  text-align: center;
  color: #fa6450;
}
.coupons {
  padding-top: 150rpx;
  width: 100%;
  display: block;
}
.tab-h{
  height: 80rpx;
  width: 100%; 
  box-sizing: border-box;
  /* overflow: hidden; */
  line-height: 80rpx;
  font-size: 16px; 
  white-space: nowrap;
}
.tab-item{
  width: 33.3%;
  text-align: center;
  display: inline-block;
  font-size: 32rpx;
  letter-spacing: 0.3px;
  color: #333333;
}
.tab-item.active{
  color: #fa6450;
  font-weight: bold;
  position: relative;
}
.tab-item.active:after{ 
  content: "";
  display: block;
  height: 6rpx;
  width: 130rpx;
  background: #fa6450;
  position: absolute; 
  bottom: 0;
  left: 0;
  transform: translateX(50%);
  border-radius: 16rpx;
}

.item-ans{ 
  width: 686rpx;
  display: flex; 
  /* flex-grow: row no-wrap; */
  /* justify-content: space-between;  */
  height: 280rpx;
  object-fit: contain;
  box-shadow: 0 5px 15px -5px rgba(0, 0, 0, 0.2);
  background-color: #f8f8f8;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}
.used {
  background: url(https://i.ishangbin.com/img/user/images/shiyong.png) right top no-repeat;
  background-size: 160rpx 160rpx;
}
.overdue {
   background: url(https://i.ishangbin.com/img/user/images/guoqi.png) right top no-repeat;
  background-size: 160rpx 160rpx;
}
.avatar{
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-right: 32rpx;
}
.avatar .img{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.avatar .doyen{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}
.expertInfo{
  font-size: 12px;
  flex-grow: 2;
  color: #B0B0B0;
  line-height: 1.5em;
}
.expertInfo .name{
  margin-bottom: 15rpx;
  width: 380rpx;
  padding-bottom: 30rpx;
  line-height: 48rpx;
  max-height: 70rpx;
  font-size: 36rpx;
  font-weight: 500;
  letter-spacing: 0.3px;
  color: #000000;
  overflow: hidden;
  border-bottom: 1px solid #e5e5e5;
}

.useStrategy , .times{
  height: 34rpx;
  font-size: 24rpx;
  letter-spacing: 0.2px;
  color: #999999;
}
.tab-content{
  width: 100%;
  margin-top: 40rpx;
}
.scoll-h{
  height: 100%;
}

.tab {
  height: 128rpx;
  position: fixed;
  right: 0;
  bottom: 100rpx;
}
.tab .show {
  height: 128rpx;
}
.tab .show  .close {
  width: 82rpx;
  height: 44rpx;
  border-radius: 40rpx 0  0 40rpx;
  box-shadow: -4px 0 10px 0 rgba(0, 0, 0, 0.2);
  background-color: #ffffff;
  padding-top: 36rpx;
  font-size: 20rpx;
  letter-spacing: 0.2px;
  text-align: center;
  color: #333333;
  display: inline-block;
  vertical-align: middle;
  
}
.tab .open {
  width: 82rpx;
  height: 44rpx;
  border-radius: 40rpx 0  0 40rpx;
  box-shadow: -4px 0 10px 0 rgba(0, 0, 0, 0.2);
  background-color: #ffffff;
  padding-top: 36rpx;
  font-size: 20rpx;
  letter-spacing: 0.2px;
  text-align: center;
  color: #333333;
  display: inline-block;
  vertical-align: middle;
}
.tab .open image , .tab .show  .close image {
   width: 24rpx;
  height: 24rpx;
  display: block;
  margin: 0 auto;
  margin-top: -16rpx;
}
.tab .show  .menu {
  vertical-align: middle;
  display: inline-block;
  width: 232rpx;
  height: 128rpx;
  border-radius: 10rpx;
  box-shadow: -4px 0 10px 0 rgba(0, 0, 0, 0.2);
  background-color: #ffffff;
}
.brand ,.user {
  width: 50%;
  float: left;
  height: 100%;
  font-size: 20rpx;
  letter-spacing: 0.2px;
  text-align: center;
  color: #333333;
}
.brand image , .user image {
  margin: 0 auto;
  margin-top: 16rpx;
  margin-bottom: 6rpx;
  width: 54rpx;
  height: 54rpx;
  display: block;
  
}
.loadings {
  padding: 30rpx 10rpx 0rpx 10rpx ;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}
.nocoupon {
  margin: 0 auto;
  margin-top: 60rpx;
  display: block;
  width: 225rpx;
  height: 328rpx;
  opacity: 0.3;
}