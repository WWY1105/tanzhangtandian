.container {
  padding: 0 ;
  /* padding-bottom: 60px; */
  overflow-x: hidden;
  background-color: #ff4747;
  position: relative;
}

.pic{
  position: relative;
  width: 100%;

}
image {
  width: 100%;
}
.change {
  position: relative;
  top: -80rpx;
  width: 100%;
  height: 80rpx;
}
 .overflow {
    position: relative;
    top: -150rpx;
    width: 100%;
  }
 .coupon-show-box {
  z-index: 1000;
  border: 1px solid #e3e3e3;
  margin: 0rem 50rpx;
  padding-bottom: 40rpx;
  text-align: center;
  background-color: #fff;
  position: relative;
  }
.coupon-show-box::before{
  content: '';
  width: 100%;
  height: 15rpx;
  position: absolute;
  background: url(https://i.ishangbin.com/img/user/images/line1.png) center no-repeat;
  background-size: 100% 100%;
  top: -14rpx;
  left: 0rpx;

}
.empty {
  width: 100%;
  height: 150rpx;
}
.name {
  background: #fff;
  line-height: 1.8;
  margin: 50rpx auto 30rpx;
  font-size: 42rpx;
  color: #333333;
  font-weight: bold;
}
.use {
  color: #333333;
  font-size: 26rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  display: block;
  margin: 30rpx 250rpx 70rpx;
  border-bottom:2px solid #ccc;
  padding-bottom:15rpx;
}

.coupons-detail {
  width: 100%;
  position: relative;
  top: -150rpx;
}
.items {
  background-color: #fff;
  font-size: 25rpx;
  margin:0 50rpx;
  padding-top: 20rpx;
  padding-bottom: 50rpx; 
  
}
.item {
  margin: 20rpx 40rpx 20rpx 20rpx;
  text-align: left; 
}
.left {
  float: left;
  width: 150rpx;
  text-align: right;
  color: #aaa; 
}
.right {
  margin-left: 170rpx;
  line-height: 40rpx;
  color: #000; 
}