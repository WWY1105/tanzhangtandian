/* pages/shareCard/buySuccess/buySuccess.wxss */
page {
    transition: all 0.3s linear 0s;
    margin-top: 0px;
    background: linear-gradient(180deg, #525263 0%, #282933 100%);
    background-size: 100% 922rpx;
    background-repeat: no-repeat;
     background-color: #F0F2F5;
}

.buySuccessPage {}

.contentBox {
    position: relative;
}

.logoBox image {
    width: 253rpx;
    height: 213rpx;
    margin-bottom: 55rpx;
    margin-top: 50rpx;
}

.bigTitle {
    font-size: 36rpx;
    font-weight: bold;
    color: #FFFFFF;
    line-height: 52rpx;
    text-align: center;
}

.selectBox {
    font-size: 24rpx;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 24rpx;
    margin-top: 22rpx;
}

.selectBox .gou {
    width: 24rpx;
    height: 24rpx;
    margin-right: 8rpx;
}

.smallTips {
    font-size: 24rpx;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 24rpx;
    text-align: center;
    margin-top: 22rpx;
}

.btnBox {
    margin-top: 46rpx;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 24rpx;
}

.btnBox .btn {
    width: 200rpx;
    height: 64rpx;
    box-shadow: 0px 10rpx 20rpx 0rpx rgba(245, 166, 35, 0.1);
    border-radius: 100rpx;
    text-align: center;
    line-height: 64rpx;
}

.btnBox .btn.share {
    background-color: #FFBB59;
    margin: unset;
    font-size: 28rpx;
    font-weight: 400;
    color: #fff;
}

.btnBox .btn.seeMore {
    background: rgba(255, 255, 255, .2);
    color: #fff;
    margin-left: 32rpx;
}

.orderDesc {
    padding: 0 24rpx;
    margin-top: 65rpx;
}

.orderDesc .content {
    /* position: absolute; */
    width: 100%;
    box-sizing: border-box;
    border-radius: 24rpx;
    background-color: #fff;
    padding: 40rpx 32rpx;
    color: #666666;
    font-size: 26rpx;
    min-height: 400rpx;
}
.orderDesc .content .title{
    color: #333;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
}
.orderDesc .content  .eachDesc{
    line-height: 44rpx;
}




.modalbox {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    z-index: 999;
    background:rgba(0, 0, 0, 0.6);
  }
  
  .modal {
    text-align: center;
    position: absolute;
    top:0;
    bottom:0;
    left:0;
    right:0;
    margin:auto;
    width: 494rpx;
    height: 712rpx;
    border-radius: 5px;
    padding-top: 20rpx; 
    color: #000000;
  }

  .modal image{
  width: 100%;
  height: 100%;
  }
  .modal button{
    width: 100%;
    height: 100%;
    background: unset;
  }
