<!--pages/shareCard/coupons/coupons.wxml-->
<view class="containerBox">
    <view class="shareTitle">共享卡</view>
    <view class="shareCouponBox flexSpace">
        <view class="content flexStart">
            <view class="coponName">50</view>
            <view class="couponDesc">
                <view class="bigTitle">火锅套餐专享券</view>
                <view class="couponRules">
                    <view>券有效期自领取日后7天</view>
                    <view>消费满100元可使用</view>
                </view>
            </view>
        </view>
        <view class="leftNum">还剩5张</view>
    </view>
    <view class="shareCouponTips">*此券仅限好友使用/可分享给自己</view>
    <view class="shareBtn">
        <view>分享给朋友领取</view>
    </view>

    <!-- 自用券 -->
    <view class="selfCouponContainer">
        <view class="shareTitle">自用券</view>
        <view class="selfCouponBox flexSpace">
            <view class="content flexStart">
                <view class="coponName">50</view>
                <view class="couponDesc">
                    <view class="bigTitle">火锅套餐专享券</view>
                    <view class="couponRules">
                        <view>券有效期自领取日后7天</view>
                        <view>消费满100元可使用</view>
                    </view>
                </view>
            </view>
            <view class="toused">去使用</view>

        </view>
    </view>
</view>