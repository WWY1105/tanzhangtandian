/* pages/shareCard/coupons/coupons.wxss */
page {
    background: #fff;
}

.containerBox {
    padding: 20rpx 25rpx;
}

.shareTitle {
    color: #272934;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.shareCouponBox {
    padding: 28rpx 17rpx;
    border-radius: 10rpx;
    background: url(https://saler.ishangbin.com/img/shareCard/shareCouponBg.png) left center no-repeat;
    background-size: cover;
}

.shareCouponBox .coponName {
    padding: 0rpx 33rpx 0 0;
    color: #411E00;
    font-weight: bold;
    font-size: 90rpx;
}

.shareCouponBox .couponDesc .bigTitle {
    font-size: 32rpx;
    font-weight: bold;
    color: #411E00;
    margin-bottom: 25rpx;
}

.shareCouponBox .couponDesc .couponRules {
    font-size: 22rpx;
    line-height: 35rpx;
    color: #411E00;
    opacity: 0.6;
}

.shareCouponBox .leftNum {
    font-size: 36rpx;
    font-weight: bold;
    color: #411E00;
}

.shareCouponTips {
    font-size: 22rpx;
    font-weight: bold;
    color: #333333;
    margin: 20rpx 0;
}

.shareBtn {
    height: 88rpx;
    line-height: 88rpx;
    background: #FFBB59;
    border-radius: 44rpx;
    font-size: 34rpx;
    font-weight: bold;
    color: #411E00;
    text-align: center;
}

.selfCouponContainer {
    margin-top: 40rpx;
}

.selfCouponBox {
    padding: 28rpx 17rpx;
    border-radius: 10rpx;
    background: url(https://saler.ishangbin.com/img/shareCard/couponBg.png) right bottom no-repeat;
    background-size: 100% 100%;
}

.selfCouponBox .coponName {
    padding: 0rpx 33rpx 0 0;
    color: #272934;
    font-weight: bold;
    font-size: 90rpx;
}

.selfCouponBox .couponDesc .bigTitle {
    font-size: 32rpx;
    font-weight: bold;
    color: #272934;
    margin-bottom: 25rpx;
}

.selfCouponBox .couponDesc .couponRules {
    font-size: 22rpx;
    line-height: 35rpx;
    color: #91919E;
}

.selfCouponBox .toused {
    font-size: 32rpx;
    font-weight: bold;
    color: #411E00;
    height: 66rpx;
    background: #FFFFFF;
    border-radius: 33rpx;
    line-height: 66rpx;
    text-align: center;
    padding: 0 30rpx;
}
