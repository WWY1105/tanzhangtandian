/* pages/shareCard/myCardDesc/myCardDesc.wxss */
page {
    padding-top: 26rpx;
}

.shopInfo {
    margin-bottom: 24rpx;
}

.shopInfo .logo {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.shopInfo .brand {
    font-size: 32rpx;
    font-weight: bold;
    color: #343434;
}

.containerBox {
    padding: 24rpx;
}

.cardBox {
    background: url(https://saler.ishangbin.com/img/shareCard/cardBg.png) left center no-repeat;
    background-size: 100% 100%;
    padding: 40rpx 50rpx;
}

.cardBox .leftBox .name {
    font-size: 40rpx;
    font-weight: bold;
    color: #EECA94;
    margin-bottom: 13rpx;
    max-width: 250rpx;
    word-break: keep-all;
    text-overflow: ellipsis;
    overflow: hidden;
}

.cardBox .leftBox .date {
    font-size: 22rpx;
    font-weight: bold;
    color: #EECA94;
    line-height: 26rpx;
    border: 1rpx solid #EECA94;
    border-radius: 10rpx;
    text-align: center;
    padding: 10rpx 14rpx;
    width: fit-content;
}

.cardBox .rightBox {
    flex-direction: column;
    align-items: flex-end;
}

.cardBox .rightBox .tips {
    font-size: 24rpx;
    font-weight: bold;
    color: #EECA94;
    line-height: 26rpx;
}

.cardBox .rightBox .seeDetail {
    background: #EECA94;
    border-radius: 10rpx;
    padding: 10rpx 30rpx;
    color: #343434;
    font-size: 22rpx;
    margin-bottom: 25rpx;
    width: fit-content;
}

.parterBox {
    background-color: #fff;
    padding: 34rpx 20rpx;
    border-radius: 10rpx;
}

.parterBox .title {
    font-size: 38rpx;
    font-weight: bold;
    color: #282A34;
    line-height: 48rpx;
}

.parterBox .toInvide {
    margin: 0;
    line-height: 1;
    background: #FFBC5A;
    border-radius: 10rpx;
    text-align: center;
    padding: 20rpx 48rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #421F00;
}

.parterBox .parter {
    margin-top: 25rpx;
    font-size: 24rpx;
    color: #343434;
}

.parterBox .parter .eachParter {
    text-align: center;
}

.parterBox .parter image.parterImg {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.couponNav {
    padding: 38rpx 0 30rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #0A1125;
    line-height: 26rpx;
}

.couponNav .seeMore {
    font-size: 24rpx;
    color: #92929E;
}