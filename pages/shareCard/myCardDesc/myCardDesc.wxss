/* pages/shareCard/myCardDesc/myCardDesc.wxss */
page {
    padding-top: 24rpx;
    padding-bottom: 200rpx;
}

.cardInfo {
    margin-top: 30rpx;
    padding: 20rpx;
    background: #C0352C;
    border-radius: 10rpx;
    font-size: 26rpx;
    color: #FFFEFE;
    font-weight: bold;
    align-items: flex-start
}

.cardInfo .tongzhi {
    width: 27rpx;
    height: 24rpx;
    margin-right: 20rpx;
}

.shopInfo {
    margin-bottom: 24rpx;
}

.shopInfo .logo {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.shopInfo .brand {
    font-size: 32rpx;
    font-weight: bold;
    color: #343434;
}

.containerBox {
    padding: 0 24rpx;
}

.cardBox {
    background: url(https://saler.ishangbin.com/img/shareCard/cardBg.png) left center no-repeat;
    background-size: cover;
    padding: 40rpx 50rpx 24rpx;
    border-radius: 20rpx;
}

.cardBox .leftBox .name {
    font-size: 40rpx;
    font-weight: bold;
    color: #EECA94;
    margin-bottom: 13rpx;
    max-width: 360rpx;
    word-break: keep-all;
    text-overflow: ellipsis;
    overflow: hidden;
}

.cardBox .date {
    font-size: 22rpx;
    font-weight: bold;
    color: #EECA94;
    line-height: 26rpx;
    border: 1rpx solid #EECA94;
    border-radius: 10rpx;
    text-align: center;
    padding: 10rpx 14rpx;
    width: fit-content;
}

.cardBox2 .rightBox {
    flex-direction: column;
    align-items: flex-end;
}

.cardBox2 .tips {
    font-size: 24rpx;
    font-weight: bold;
    color: #EECA94;
    line-height: 26rpx;
}

.cardBox .rightBox .seeDetail {
    background: #EECA94;
    border-radius: 10rpx;
    padding: 10rpx 30rpx;
    color: #343434;
    font-size: 22rpx;
    margin-bottom: 25rpx;
    width: fit-content;
}

.cardBox .rightBox .seeDetail .cardDetailIcon {
    width: 9rpx;
    height: 14rpx;
    margin-left: 10rpx;
}

.parterBox {
    background-color: #fff;
    padding: 34rpx 20rpx;
    border-radius: 10rpx;
}

.parterBox .title {
    font-size: 38rpx;
    font-weight: bold;
    color: #282A34;
    line-height: 48rpx;
}

.parterBox .toInvide {
    margin: 0;
    line-height: 1;
    background: #FFBC5A;
    border-radius: 10rpx;
    text-align: center;
    padding: 20rpx 48rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #421F00;
}

.parterBox .toInvide.fulldata {
    background-color: #9A9A9A;
    color: #fff;
    padding: 20rpx 18rpx
}

.parterBox .parter {
    margin-top: 25rpx;
    font-size: 24rpx;
    color: #343434;
    flex-wrap: wrap;
}

.parterBox .parter .eachParter {
    text-align: center;
    margin-right: 30rpx;
}

.parterBox .parter image.parterImg {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;

}

.parterBox .parter .name {
    max-width: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    max-width: 80rpx;
}

.couponNav {
    padding: 30rpx 0;
    font-size: 30rpx;
    font-weight: bold;
    color: #0A1125;
    line-height: 26rpx;
}

.couponCount {
    font-size: 48rpx;
    color: #C0352C;
}

.couponNav .seeMore {
    font-size: 24rpx;
    color: #92929E;
}

/* 进度条start */
.cardProcessBox {
    margin-top: 98rpx;
}

.cardProcessBox .lineBox {
    position: relative;
    margin-bottom: 8rpx;
    min-height: 7rpx;
}

.cardProcessBox .bgLine {
    width: 100%;
    height: 7rpx;
    background: #C8B4A0;
    border-radius: 3rpx 3rpx 3rpx 3rpx;
    position: absolute;
    left: 0;
    top: 0;
}

.cardProcessBox .acLine {
    /* width: 0%; */
    height: 7rpx;
    background: #FFBB59;
    border-radius: 5rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
}

.cardProcessBox image.locate {
    width: 23rpx;
    height: 56rpx;
    position: absolute;
    top: 50%;
    margin-top: -46rpx;
}

.cardProcessBox .textBox {
    font-size: 24rpx;
    font-weight: bold;
    color: #EEC993;
    line-height: 25rpx;
    margin-top: 8rpx;
}

.cardProcessBox .textBox .nowDiscount {
    font-size: 24rpx;
    font-weight: bold;
    color: #FFBB59;
    line-height: 16px;

}

/* 进度条end */


/* 权益 */
.contentContainer {
    margin-top: 30rpx;
    border-radius: 10rpx;
}

.contentContainer .content {
    background: #fff;
    padding: 0 24rpx;
    padding-bottom: 43rpx;
    padding-top: 37rpx;
    border-radius: 10rpx;

}

.contentContainer .content .rightBox {
    margin-bottom: 34rpx;
}

.contentContainer .content .titleLine {
    width: 106rpx;
    height: 12rpx;
}

.contentContainer .content .titleLine.titleLineLeft {
    margin-right: 40rpx;
}

.contentContainer .content .titleLine.titleLineRight {
    margin-left: 40rpx;
}

.contentContainer .content .rightTitle {
    font-size: 32rpx;
    font-weight: bolder;
    color: #272934;
    background: linear-gradient(270deg, #B89B7B 0%, #7B6244 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.containerCouponTitle {
    background: url(https://saler.ishangbin.com/img/shareCard/partBg.png) 0 0 no-repeat;
    background-size: 100% 100%;
    padding-top: 18rpx;
    padding-bottom: 14rpx;
    text-align: center;
    margin-bottom: 20rpx;
}

.containerCouponTitle .main {
    font-size: 30rpx;
    font-weight: bolder;
    color: #411E00;
    margin-bottom: 14rpx;
}

.containerCouponTitle .second {
    font-size: 24rpx;
    color: #856944;
}

/* 图表 */
.chartBoxContainer {
    border-radius: 10rpx;
    padding-bottom: 40rpx;
    flex-direction: column;
    box-shadow: 0px 6px 17px 0px rgba(169, 185, 200, 0.27);
}

.chartBox {
    padding: 0 24rpx;
    flex-direction: column;
    width: 581rpx;

}

.chartBox .tips {
    font-size: 22rpx;
    color: #333333;
}

.chartBox .tips.bottomTips {
    text-align: right;
    width: 100%;
    margin-bottom: 30rpx;
}

.chartBox .tips.topTips {
    text-align: left;
    width: 100%;
}


.chartBox .chartImg {
    width: 581rpx;
    height: 164rpx;
    background: url(https://saler.ishangbin.com/img/shareCard/chart.png) right bottom no-repeat;
    background-size: 100% 100%;
    margin-top: 12rpx;
    margin-bottom: 12rpx;
    position: relative;
}

.chartBox .chartImg view {
    z-index: 1;
    position: absolute;
    color: #333;
    font-size: 24rpx;
}

.chartBox .chartImg .finalDiscount {
    right: 15rpx;
    bottom: 35rpx;
}

.chartBox .chartImg .maxDiscount {
    left: 35%;
    bottom: 100rpx;
    transform: rotate(15deg);
}

.chartBox .chartImg .originDiscount {
    left: 70rpx;
    top: 0rpx;
}

.chartBoxContainer .processBox {
    font-size: 22rpx;
    color: #333333;
    width: 581rpx;
}

.chartBoxContainer .processRight {
    min-width: 30%;
    text-align: right;
}

.chartBoxContainer .process {
    width: 40%;
    height: 19rpx;

    opacity: 0.6;
    position: relative;
}

.chartBoxContainer .process .activeProcess1 {
    height: 100%;
    background-color: #411E00;
}

.chartBoxContainer .process .activeProcess2 {
    height: 100%;
    background: #A0A2AE;
}

.chartBoxContainer .processLeft {
    min-width: 20%;
}

.chartBoxContainer .selfProcess {
    margin-bottom: 20rpx;
}

/* 活动说明 */
.contentContainer .content .mainTitle {
    font-size: 30rpx;
    font-weight: bold;
    color: #000000;
    margin-bottom: 20rpx;
}

.contentContainer .content .descBox {
    color: #000;
    font-size: 24rpx;

}

.contentContainer .content .descBox .eachDesc {
    line-height: 48rpx;
}

/* 适用门店 */
.contentContainer .content .shopsBox .eachShop {
    padding: 20rpx 0;
}

.contentContainer .content .shopsBox .shopName {
    color: #000;
    font-size: 28rpx;
    margin-bottom: 17rpx;
}

.contentContainer .content .shopsBox .address {
    color: #9E9FA8;
    font-size: 22rpx;
}

.contentContainer .content .shopsBox .phone {
    padding-left: 35rpx;
    min-height: 48rpx;
    border-left: 2rpx solid #E6E7E9;
}

.contentContainer .content .shopsBox .phone image {
    width: 30rpx;
    height: 38rpx;
}

.contentContainer .content .seeMoreShop {
    flex-direction: column;
    font-size: 24rpx;
    color: #272934;
    padding: 20rpx 0;
    border-top: 1rpx solid #EEEEEE;
}

.contentContainer .content .seeMoreShop .arrowDown {
    margin-top: 10rpx;
    width: 16rpx;
    height: 9rpx;
}

.contentContainer .content .seeMoreShop .arrowDown.trans {
    transform: rotate(180deg);
}

.contentContainer .content.shopContent {
    padding-bottom: 0;
}