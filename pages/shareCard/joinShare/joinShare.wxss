/* pages/shareCard/myCardDesc/myCardDesc.wxss */
page {
    padding-bottom: 200rpx;
    background: #F5F5F5;
}

.cardBox {
    background-color: #CDCED7;
    padding: 24rpx 0;
    box-sizing: border-box;
    position: relative;
}

.bg {
    position: absolute;
    left: 0;
    top: 250rpx;
    width: 100%;
}

.bg image {
    width: 100%;
    height: 190rpx;
}

.cardContentBox {
    padding: 0 32rpx;
}

.cardContent {
    padding: 44rpx 38rpx;
    box-sizing: border-box;
    background-color: #333;
    background: url(https://saler.ishangbin.com/img/shareCard/cardBg.png) 0 0 no-repeat;
    background-size: 100% 100%;
    border-radius: 20rpx;
    min-height: 365rpx;
}

.cardName {
    font-size: 40rpx;
    font-weight: bold;
    color: #EECA94;
    margin-bottom: 40rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.cardDetail {
    align-items: flex-end;
}

.cardDetail .rule {
    font-size: 24rpx;
    font-weight: bold;
    color: #EEC993;
    word-break: keep-all;
}

.cardDetail .rule .rule1 {
    margin-bottom: 24rpx;
}

.cardDetail .discount {
    font-weight: bold;
    color: #EEC993;
    font-size: 24rpx;
    text-align: right;
}

.cardDetail .discount .discountNum {
    line-height: 1;
    align-items: baseline;
}

.cardDetail .discount .discountTips {
    margin-top: 20rpx;
}

.cardDetail .discount .num {
    font-size: 74rpx;
}

.shopInfo {
    position: absolute;
    top: 300rpx;
    flex-direction: column;
    width: 100%;
    font-size: 32rpx;
    border-bottom: 24rpx solid #fff;
    color: #343434;
    font-weight: bolder;
}

.shopInfo image {
    margin-bottom: 15rpx;
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}


/* 权益 */
.contentContainer {
    margin-top: 50rpx;
    border-radius: 10rpx;
    padding: 0 24rpx;
}

.contentContainer .content {
    background: #fff;
    padding: 0 24rpx;
    padding-bottom: 43rpx;
    padding-top: 37rpx;
}

.contentContainer .content .rightBox {
    margin-bottom: 34rpx;
}

.contentContainer .content .titleLine {
    width: 106rpx;
    height: 12rpx;
}

.contentContainer .content .titleLine.titleLineLeft {
    margin-right: 40rpx;
}

.contentContainer .content .titleLine.titleLineRight {
    margin-left: 40rpx;
}

.contentContainer .content .rightTitle {
    font-size: 32rpx;
    font-weight: bolder;
    color: #272934;
    background: linear-gradient(270deg, #B89B7B 0%, #7B6244 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.containerCouponTitle {
    background: url(https://saler.ishangbin.com/img/shareCard/partBg.png) 0 0 no-repeat;
    background-size: 100% 100%;
    padding-top: 18rpx;
    padding-bottom: 14rpx;
    text-align: center;
    margin-bottom: 20rpx;
}

.containerCouponTitle .main {
    font-size: 30rpx;
    font-weight: bolder;
    color: #411E00;
    margin-bottom: 14rpx;
}

.containerCouponTitle .second {
    font-size: 24rpx;
    color: #856944;
}

/* 图表 */
.chartBoxContainer {
    flex-direction: column;
}

.chartBox {
    padding: 0 24rpx;
    flex-direction: column;
    width: 581rpx;
}

.chartBox .tips {
    font-size: 22rpx;
    color: #333333;
}

.chartBox .tips.bottomTips {
    text-align: right;
    width: 100%;
    margin-bottom: 30rpx;
}

.chartBox .tips.topTips {
    text-align: left;
    width: 100%;
}

.chartBox .chartImg {
    width: 581rpx;
    height: 164rpx;
    background: url(https://saler.ishangbin.com/img/shareCard/chart.png) right bottom no-repeat;
    background-size: 100% 100%;
    margin-top: 12rpx;
    margin-bottom: 12rpx;
    position: relative;
}
.chartBox .chartImg view{
    z-index: 1;
    position: absolute;
    color: #333;
    font-size: 24rpx;
}
.chartBox .chartImg .finalDiscount{
    right: 15rpx;
    bottom: 16rpx;
}
.chartBox .chartImg .maxDiscount{
    left: 35%;
    bottom: 100rpx;
    transform: rotate(15deg);
}
.chartBox .chartImg .originDiscount{
    left: 70rpx;
    top: 0rpx;
}
.chartBoxContainer .processBox {
    font-size: 22rpx;
    color: #333333;
    width: 581rpx;
}

.chartBoxContainer .processRight {
    min-width: 30%;
    text-align: right;
}
.chartBoxContainer  .processLeft{
    min-width: 20%;
    }
.chartBoxContainer .process {
    width: 40%;
    height: 19rpx;
  
    opacity: 0.6;
    position: relative;
}
.chartBoxContainer .process .activeProcess1{
    height: 100%;
    background-color:#411E00 ;
}
.chartBoxContainer .process .activeProcess2{
    height: 100%;
    background: #A0A2AE;
}
.chartBoxContainer .selfProcess {
    margin-bottom: 20rpx;
}


.shopDetailBox {
    padding: 26rpx;
    box-sizing: border-box;
}

.innerText {
    margin: 26rpx;
    background-color: #fff;
    box-sizing: border-box;
    padding: 26rpx;
    margin-top: 0;
}

.shopDetailBox .content .title {
    margin: 0 26rpx;
    background: #fff;
    padding-left: 26rpx;
    padding-top: 30rpx;
    color: #333;
    font-size: 30rpx;
    font-weight: bolder;
}

.bottomBtn .price {
    color: #EEC993;
    font-size: 26rpx;
    font-weight: bolder;
}

.bottomBtn .toBuy {
    width: 34%;
    text-align: center;
    font-size: 34rpx;
    font-weight: bolder;
    color: #5A3E0E;
}


.parterBox {
    background-color: #fff;
    padding: 34rpx 20rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.parterBox .title {
    font-size: 38rpx;
    font-weight: bold;
    color: #282A34;
    line-height: 48rpx;
    flex-wrap: wrap;
    margin-bottom: 32rpx;
}

.parterBox .joinNum {
    color: #616161;
    font-size: 24rpx;
}

.parterBox .title .firstPerson,
.parterBox .title .cardname {
    color: #411E00;
}

.parterBox .toInvide {
    margin: 0;
    line-height: 1;
    background: #FFBC5A;
    border-radius: 10rpx;
    text-align: center;
    padding: 20rpx 48rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #421F00;
}

.parterBox .toInvide.fulldata {
    background-color: #9A9A9A;
    color: #fff;
    padding: 20rpx 18rpx
}

.parterBox .parter {
    margin-top: 25rpx;
    font-size: 24rpx;
    color: #343434;
}

.parterBox .parter .eachParter {
    text-align: center;
    margin-right: 37rpx;
}

.parterBox .parter image.parterImg {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}