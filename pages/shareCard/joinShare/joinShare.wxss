/* pages/shareCard/myCardDesc/myCardDesc.wxss */
page {
    padding-bottom: 200rpx;
    background: #F5F5F5;
}

.cardBox {
    background-color: #CDCED7;
    padding: 24rpx 0;
    box-sizing: border-box;
    position: relative;
}

.bg {
    position: absolute;
    left: 0;
    top: 250rpx;
    width: 100%;
}

.bg image {
    width: 100%;
    height: 190rpx;
}

.cardContentBox {
    padding: 0 32rpx;
}

.cardContent {
    padding: 44rpx 38rpx;
    box-sizing: border-box;
    background-color: #333;
    background: url(https://saler.ishangbin.com/img/shareCard/cardBg.png) 0 0 no-repeat;
    background-size: 100% 100%;
    border-radius: 20rpx;
    min-height: 365rpx;
}

.cardName {
    font-size: 40rpx;
    font-weight: bold;
    color: #EECA94;
    margin-bottom: 10rpx;
}

.cardDetail {
    align-items: flex-end;
}

.cardDetail .rule {
    font-size: 24rpx;
    font-weight: bold;
    color: #EEC993;
    word-break: keep-all;
}

.cardDetail .rule .rule1 {
    margin-bottom: 24rpx;
}

.cardDetail .discount {
    font-weight: bold;
    color: #EEC993;
    font-size: 24rpx;
    text-align: right;
}

.cardDetail .discount .discountNum {
    line-height: 1;
    align-items: baseline;
}

.cardDetail .discount .discountTips {
    margin-top: 20rpx;
}

.cardDetail .discount .num {
    font-size: 74rpx;
}

.shopInfo {
    position: absolute;
    top: 300rpx;
    flex-direction: column;
    width: 100%;
    font-size: 32rpx;
    border-bottom: 24rpx solid #fff;
    color: #343434;
    font-weight: bolder;
}

.shopInfo image {
    margin-bottom: 15rpx;
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}


/* 权益 */
.contentContainer {
    margin-top: 50rpx;
    border-radius: 10rpx;
    padding: 0 24rpx;
}

.contentContainer .content {
    background: #fff;
    padding: 0 24rpx;
    padding-bottom: 43rpx;
    padding-top: 37rpx;
}

.contentContainer .content .rightBox {
    margin-bottom: 34rpx;
}

.contentContainer .content .titleLine {
    width: 106rpx;
    height: 12rpx;
}

.contentContainer .content .titleLine.titleLineLeft {
    margin-right: 40rpx;
}

.contentContainer .content .titleLine.titleLineRight {
    margin-left: 40rpx;
}

.contentContainer .content .rightTitle {
    font-size: 32rpx;
    font-weight: bolder;
    color: #272934;
    background: linear-gradient(270deg, #B89B7B 0%, #7B6244 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.containerCouponTitle {
    background: url(https://saler.ishangbin.com/img/shareCard/partBg.png) 0 0 no-repeat;
    background-size: 100% 100%;
    padding-top: 18rpx;
    padding-bottom: 14rpx;
    text-align: center;
    margin-bottom: 20rpx;
}

.containerCouponTitle .main {
    font-size: 30rpx;
    font-weight: bolder;
    color: #411E00;
    margin-bottom: 14rpx;
}

.containerCouponTitle .second {
    font-size: 24rpx;
    color: #856944;
}

/* 图表 */
.chartBoxContainer {
    flex-direction: column;
}

.chartBox {
    padding: 0 24rpx;
    flex-direction: column;
    width: 581rpx;
}

.chartBox .tips {
    font-size: 22rpx;
    color: #333333;
}

.chartBox .tips.bottomTips {
    text-align: right;
    width: 100%;
    margin-bottom: 30rpx;
}

.chartBox .tips.topTips {
    text-align: left;
    width: 100%;
}

.chartBox .chartImg {
    width: 581rpx;
    height: 164rpx;
    background: url(https://saler.ishangbin.com/img/shareCard/chart.png) right bottom no-repeat;
    background-size: 100% 100%;
    margin-top: 12rpx;
    margin-bottom: 12rpx;
}

.chartBoxContainer .processBox {
    font-size: 22rpx;
    color: #333333;
    width: 581rpx;
}

.chartBoxContainer .process {
    width: 234rpx;
    height: 19rpx;
    background: #A0A2AE;
    opacity: 0.6;
}

.chartBoxContainer .selfProcess {
    margin-bottom: 20rpx;
}

/* 活动说明 */
.contentContainer .content .mainTitle {
    font-size: 30rpx;
    font-weight: bold;
    color: #000000;
    margin-bottom: 20rpx;
}

.contentContainer .content .descBox {
    color: #000;
    font-size: 24rpx;

}

.contentContainer .content .descBox .eachDesc {
    line-height: 48rpx;
}

/* 适用门店 */
.contentContainer .content .shopsBox .eachShop {
    padding: 20rpx 0;
}

.contentContainer .content .shopsBox .shopName {
    color: #000;
    font-size: 28rpx;
    margin-bottom: 17rpx;
}

.contentContainer .content .shopsBox .address {
    color: #9E9FA8;
    font-size: 22rpx;
}

.contentContainer .content .shopsBox .phone {
    padding-left: 35rpx;
    min-height: 48rpx;
    border-left: 2rpx solid #E6E7E9;
}

.contentContainer .content .shopsBox .phone image {
    width: 30rpx;
    height: 38rpx;
}
.contentContainer .content  .seeMoreShop{
flex-direction: column;
font-size: 24rpx;
color: #272934;
padding: 20rpx 0;
border-top: 1rpx solid #EEEEEE;
}
.contentContainer .content  .seeMoreShop .arrowDown{
    margin-top: 10rpx;
    width: 16rpx;
    height: 9rpx;
}
.contentContainer .content.shopContent{
    padding-bottom: 0;
}