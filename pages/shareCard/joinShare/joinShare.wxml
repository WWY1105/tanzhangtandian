<!--pages/shareCard/myCardDesc/myCardDesc.wxml-->
<view class="containerBox">
    <view class="cardBox">
        <view class="cardContentBox">
            <view class="cardContent">
                <view class="cardName">{{data.card.name}}</view>
                <view class="cardDetail flexSpace">
                    <view class="rule" wx:if="{{data.card.grows}}">
                        <view class="rule1">自用优惠券*{{data.card.grows[0].times}}+好友分享券*{{data.card.grows[1].times}}</view>
                        <view>你或好友持卡消费可降低折扣</view>
                    </view>
                    <view class="discount">
                        <view class="discountNum flexCenter">
                            <text>当前</text>
                            <text class="num">{{data.card.amount}}</text>
                            <text>折</text>
                        </view>
                        <view class="discountTips" wx:if="{{data.card.orgAmount&&data.card.limit}}">（最低可降至{{data.card.orgAmount-data.card.limit}}折）</view>
                    </view>
                </view>
            </view>
        </view>
        <view class="bg">
            <image class="cardBg2" src="https://saler.ishangbin.com/img/shareCard/cardBg2.png"></image>
        </view>
        <view class="shopInfo flexCenter">
            <image src="{{data.logo}}"></image>
            <view>{{data.name}}</view>
        </view>
    </view>


    <!-- 权益升级规则 -->
    <view class="contentContainer">
        <!-- 邀请 -->
        <view class="parterBox">
            <view class="title">
                <text class="firstPerson">{{data.card.inviter}}</text>
                <text>邀请您领取</text>
                <text class="cardname">共享权益卡</text>
                <text>,到店消费即享</text>
                <text>{{data.card.grows[1].value}}折</text>
            </view>
            <view class="joinNum flexSpace">
                <view class="hasJoin">已有<text class="num">{{data.shares.joined}}</text>人加入</view>
                <view class="remain">仅剩<text class="num">{{data.shares.remained}}</text>个名额 </view>
            </view>
            <view class="parter flexStart">
                <view class="eachParter" wx:for="{{data.shares.users}}" wx:key="index">
                    <image class="parterImg" src="{{item.avatarUrl}}"></image>
                    <view class="name">{{item.nickname}}</view>
                </view>
             
            </view>
        </view>
        <view class="content">
            <!-- 权益升级规则 -->
            <view class="rightBox flexCenter">
                <image src="https://saler.ishangbin.com/img/shareCard/titleLineLeft.png"
                    class="titleLine titleLineLeft">
                </image>
                <view class="rightTitle">权益升级规则</view>
                <image src="https://saler.ishangbin.com/img/shareCard/titleBgRight.png"
                    class="titleLine titleLineRight">
                </image>
            </view>
            <!-- 图表 -->
            <view class="containerCouponBox">
                <view class="containerCouponTitle">
                    <view class="main">卡折扣翻倍</view>
                    <view class="second">限名额好友参与，共建共享卡折扣</view>
                </view>
                <!-- 分销内容 -->
                <view class="chartBoxContainer flexCenter">
                    <!-- 图表 -->
                    <view class="chartBox flexCenter">
                        <view class="tips topTips">折扣卡(折)</view>
                        <view class="chartImg">
                            <view class="originDiscount">{{data.card.orgAmount}}</view>
                            <view class="maxDiscount">
                                <text>最多可降</text>
                                {{data.card.orgAmount-data.card.limit}}
                                <text>折</text>
                            </view>
                            <view class="finalDiscount">{{data.card.limit}}</view>
                        </view>
                        <view class="tips bottomTips">消费(次)</view>
                    </view>
                    <!-- 活动解析 -->
                    <view class="processBox" wx:if="{{data.card.grows}}">
                        <view class="selfProcess flexSpace">
                            <view class="processLeft">自用-{{data.card.grows[0].value}}/次</view>
                            <view class="process">
                                <view class="activeProcess1" style="width:{{data.card.grows[0].value/1}}%"></view>
                            </view>
                            <view class="processRight">最多-{{data.card.grows[0].times}}</view>
                        </view>
                        <view class="partnerProcess flexSpace">
                            <view class="processLeft">好友-{{data.card.grows[1].value}}/次</view>
                            <view class="process">
                                <view class="activeProcess2" style="width:{{data.card.grows[1].value/1}}%"></view>
                            </view>
                            <view class="processRight">仅限{{data.card.grows[1].times }}位好友首次</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>

    <!-- 商家详情 -->
    <div class="shopDetailBox">
        <view class="content">
            <view class="title">商家详情</view>
            <view class="innerText">
                <rich-text nodes="{{instructions}}"></rich-text>
            </view>
        </view>
    </div>
    <!-- 底部按钮 -->
    <view class="bottomBtn flexSpace" bindtap="toJoin">
        <view class="price">加入即可领取优惠券</view>
        <view class="toBuy">立即加入</view>
    </view>


</view>