.container {
   padding: 0;
}
.container .eachPart{
   width: 100%
}

.topBox {
   background: #fff;
   width: 100%;
   padding-top: 30rpx;
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
}

.topBox  .line {
   height: 2rpx;
   width: 90%;
   background: #f2f1f6;
   margin-top: 80rpx;
}

.topBox .shop {
   display: flex;
   align-items: center;
   text-align: center;
   justify-content: center;
}

.topBox .shopImg {
   width: 60rpx;
   height: 60rpx;
   border-radius: 50%;
   margin-right: 20rpx;
   background: #333;
}

.topBox .shopname {
   font-size: 28rpx;
   color: #000;
}

.topBox .num {
   font-size: 48rpx;
   font-weight: 500;
   color: #000;
   margin-bottom: 10rpx;
   /* margin-top: 40rpx; */
   text-align: center;
}

.topBox .tips {
   font-size: 36rpx;
   color: #7cd332;
   margin-bottom: 40rpx;
   text-align: center;
}

.topBox .tips .iconfont {
   font-size: 41rpx;
}

.content {
   padding-top: 40rpx;
   width: 100%;
   background: #fff;
}

.content .eachList {
   display: flex;
   justify-content: space-between;
   padding: 10rpx 32rpx;
}

.content .eachList .left {
   font-size: 28rpx;
   color: #999;
}

.content .eachList .right {
   font-size: 28rpx;
   color: #000;
}
/* ----------------------------- */
.advertisementBox  {
   /* padding: 0 32rpx; */
   width: 100%;
   margin-top: 40rpx;
   position: relative;
   display: flex;
   justify-content: center;
}
.advertisementBox  .text{
   color: #fff;
   font-size: 60rpx;
  font-weight: 600;
  z-index: 1;
  margin-top: 70rpx;
}

.advertisementBox image.bg {
   width: 100%;
   height: 310rpx;
   position: absolute;
}

.advertisementBox image.logo {
   height: 40rpx;
   position: absolute;
   top: 20rpx;
   z-index: 1;
}
.advertisementPic image.bg {
   width: 100%;
   height: 310rpx;
}
