<view>
  <view class='header'>
    <view class='userimg' style="background-image: url({{userimg}})"></view>
    <view class='user'>
      <text class='uesrname'>{{nickName}}jshfgasf</text>
      <text class='phone'>150****4141</text>
    </view> 
    <view class="selectBtn">
      <view class="{{selectBtn? 'leftBtn' : 'rightBtn'}}" bindtap="selectBtnFn" data-btn="{{false}}">
        <view class="btnTitle">总收益(元)</view>
        <view class="btnNum">200</view>
      </view>
      <view class="{{selectBtn? 'rightBtn' : 'leftBtn'}}" bindtap="selectBtnFn" data-btn="{{true}}">
        <view class="btnTitle">我领取的优惠券</view>
        <view class="btnNum">1</view>
      </view>
    </view>   
  </view>

  <view class='list' wx:if='{{selectBtn}}'>
    <view class='box' >
      <view class='top'>
        <text class='time'>2019-03-11 14:47</text>
        <text class='state'>赏金</text>
      </view>
      <view class='shopname'>八四老城区炭火牛蛙(镇坪路店)</view>
      <view class='bottom'>
        <image class='listuserimg' src='{{item.provider.avatarUrl}}' ></image>
        <text class='listusername'>Sammy Lawson</text>
        <text class='rmb'>50.00</text>
      </view>
    </view>
  </view>
  <view class='list' wx:if='{{!selectBtn}}'>
    <view class='business' wx:for="{{shops}}" data-id='{{item.guestId}}' bindtap='toCoupon'>
      <view class='business_top'>
        <image class='logo' src='{{item.logo}}'></image>
        <text class='title'>{{item.brand}}</text>
      </view>
      <view class='business_bottom' >
        <view>
          <view class='lable'>余额</view>
          <view class='num'>{{item.charge}}</view>
        </view>
        <view>
          <view class='lable'>积分</view>
          <view class='num'>{{item.point?item.point:0}}</view>
        </view>
        <view>
          <view class='lable'>优惠券</view>
          <view class='num'>{{item.couponCount}}</view>
        </view>
      </view>
    </view>
  </view>

  <view class='modalbox' wx:if="{{phonePop}}" catchtouchmove='true'>
    <view class='modal' >
      <view class='text'>
        <view>为了优惠券正常发放</view>
        <view>请同意手机号授权</view>
      </view>
      <view style='border-top:1px solid #ccc;'>
        <button plain="true" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" style='color:#56bc37;'>手机号授权</button>
      </view>
    </view> 
  </view>

  <swiper current="{{currentTab}}" duration="300" bindchange="swiperTab" style="height:{{aheight}}rpx">
    <swiper-item>
      <view class='list'>
          <view class='business' wx:for="{{goingshops}}" wx:key='index' >
            <view class='business_top'>
              <image class='logo' src='{{item.logo}}' lazy-load='true'></image>
              <view class='state'>
                <view class='doing' wx:if="{{item.salary > 0}}">
                  <text class='time' style='color:#03b100;'>已成功</text>
                </view>
                <view class='doing' wx:elif="{{item.time == '00:00:00'}}">
                  <text class='time'>已超时</text>
                </view>
                <view class='doing' wx:else>
                  <text>获取赏金剩余 </text>
                  <text class='time'>{{item.time}}</text>
                </view>
                
              </view>
              <view class='all'>
                <view class='line'></view>
                <view class='title'>
                  <view class='info'>
                    <text class='brand'>{{item.shopName}}</text>
                    <view class='feature'>本次活动已赚
                      <text class='red'>{{item.salary*1+item.commision*1}}</text>元</view>
                  </view>
                </view>
              </view>


            </view>
            <view class='btn'>
              <view class='detail_btn' wx:if="{{item.salary > 0}}"  data-id="{{item.id}}" data-init="true" bindtap='toDetail'>查看详情</view>
              <view class='detail_btn' wx:elif="{{item.time == '00:00:00'}}"  data-id="{{item.id}}" data-init="{{true}}" bindtap='toDetail'>查看详情</view>
              <view class='detail_btn' wx:else  data-id="{{item.id}}" data-init="true" bindtap='toShare'>查看详情</view>
               <form report-submit="true" report-submit-timeout="500" bindsubmit='submitformid'>
                  <input name="input" value='1' style='display:none'></input>
                  <button class='spread_btn'  form-type ='submit' open-type='share' data-id="{{item.id}}" data-item='{{item}}'>继续推广</button>
                </form>
              
            </view>
          </view>
        </view>
    </swiper-item>
    <swiper-item>
      <view class='list'>
          <view class='business' wx:for="{{endshops}}" wx:key='index'>
            <view class='business_top'>
              <image class='logo' src='{{item.logo}}' lazy-load='true'></image>
              <view class='state'>
                <text class='finish' wx:if="{{item.state==1001}}">已完成</text>
                <text class='overtime' wx:if="{{item.state==1002}}">已失败</text>
              </view>
              <view class='all'>
                <view class='line'></view>
                <view class='title'>
                  <view class='info'>
                    <text class='brand'>{{item.shopName}}</text>
                    <view class='feature'>本次活动已赚
                      <text class='red'>{{item.salary*1+item.commision*1}}</text>元</view>
                  </view>
                </view>
              </view>


            </view>
            <view class='btn'>
              <view class='detail_btn' data-id="{{item.id}}" data-init="false" bindtap='toDetail'>查看详情</view>
            </view>
          </view>
        </view>
    </swiper-item>
  </swiper>


</view>