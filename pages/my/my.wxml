<view>
  <view class='header'>
    <view class='user'>
      <text class='uername'>{{nickName}}</text>
      <!-- <text class='phone'>150****4141</text> -->
    </view>
    <view class='userimg' style="background-image: url({{userimg}})"></view>
  </view>
  <view class='income'>
    <view class='center' bindtap='toProfit' data-amount="{{info.amount}}" data-fee="{{info.fee}}">
      <view class='num'>{{info.amount}}</view>
      <view class='describe'>总收益(元）</view>
    </view>
    <view class='center' bindtap='toWelfare'>
      <view class='num'>{{info.count}}</view>
      <view class='describe'>我的优惠券</view>
    </view>
  </view>

  <view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">进行中</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">已失效</view>
  </view>

  <!-- <view class = "{{currentTab == 0 ? 'show':'hidden'}}" >
    <scroll-view>
      <text>暂无内容1</text>
    </scroll-view>
  </view>
  <view class = "{{currentTab == 1 ? 'show':'hidden'}}" >
    <scroll-view>
      <text>暂无内容2</text>
    </scroll-view>
  </view> -->


  <swiper current="{{currentTab}}" duration="300" bindchange="swiperTab" style="height:{{aheight}}rpx">
    <swiper-item>
      <view class='list'>
          <view class='business' wx:for="{{goingshops}}" wx:key='index' >
            <view class='business_top'>
              <image class='logo' src='{{item.logo}}' lazy-load='true'></image>
              <view class='state'>
                <view class='doing' wx:if="{{item.salary > 0}}">
                  <text class='time' style='color:#03b100;'>已成功</text>
                </view>
                <view class='doing' wx:elif="{{item.time == '00:00:00'}}">
                  <text class='time'>已超时</text>
                </view>
                <view class='doing' wx:else>
                  <text>获取赏金剩余 </text>
                  <text class='time'>{{item.time}}</text>
                </view>
                
              </view>
              <view class='all'>
                <view class='line'></view>
                <view class='title'>
                  <view class='info'>
                    <text class='brand'>{{item.shopName}}</text>
                    <view class='feature'>本次活动已赚
                      <text class='red'>{{item.salary*1+item.commision*1}}</text>元</view>
                  </view>
                </view>
              </view>


            </view>
            <view class='btn'>
              <view class='detail_btn' wx:if="{{item.salary > 0}}"  data-id="{{item.id}}" data-init="true" bindtap='toDetail'>查看详情</view>
              <view class='detail_btn' wx:elif="{{item.time == '00:00:00'}}"  data-id="{{item.id}}" data-init="{{true}}" bindtap='toDetail'>查看详情</view>
              <view class='detail_btn' wx:else  data-id="{{item.id}}" data-init="true" bindtap='toShare'>查看详情</view>
              <button class='spread_btn' open-type='share' data-id="{{item.id}}" data-item='{{item}}'>继续推广</button>
            </view>
          </view>
        </view>
    </swiper-item>
    <swiper-item>
      <view class='list'>
          <view class='business' wx:for="{{endshops}}" wx:key='index'>
            <view class='business_top'>
              <image class='logo' src='{{item.logo}}' lazy-load='true'></image>
              <view class='state'>
                <text class='finish' wx:if="{{item.state==1001}}">已完成</text>
                <text class='overtime' wx:if="{{item.state==1002}}">已超时</text>
              </view>
              <view class='all'>
                <view class='line'></view>
                <view class='title'>
                  <view class='info'>
                    <text class='brand'>{{item.shopName}}</text>
                    <view class='feature'>本次活动已赚
                      <text class='red'>{{item.salary*1+item.commision*1}}</text>元</view>
                  </view>
                </view>
              </view>


            </view>
            <view class='btn'>
              <view class='detail_btn' data-id="{{item.id}}" data-init="false" bindtap='toDetail'>查看详情</view>
            </view>
          </view>
        </view>
    </swiper-item>
  </swiper>

</view>