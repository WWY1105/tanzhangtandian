.header {
  height: 276rpx;
  width: 100%;
  background-color: #232832;
}

.center {
  text-align: center;
}
.user {
  display: inline-block;
  margin: 64rpx 64rpx;
}
.user text {
  margin: 5rpx 0;
  display: block;
}
.username {
  font-size: 40rpx;
  font-weight: 500;
}
.phone {
  font-size: 32rpx;
  font-weight: 500;
}
.userimg {
  width: 120rpx;
  height: 120rpx;
  margin: 36rpx 64rpx;
  float: right;
  box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.2);
  border: solid 1px #ffffff;
  border-radius: 50px;
  background-position: center center;
  background-size: contain;
}

.income {
  width: 686rpx;
  height: 164rpx;
  border-radius: 5px;
  position: absolute;
  left: 0;
  right: 0;
  margin: -82rpx auto;
  color: #000;
  display: flex;
  justify-content: space-around;
  align-items:center;
  box-shadow: 0 5px 10px 0 rgba(35, 40, 50, 0.15);
  background-color: #ffffff;
}
.num {
  font-family: FZCTHJW-GB1-0;
  font-size: 40rpx;
  color: #000000;
  font-weight: 500;
}
.describe {
  font-family: PingFangSC;
  font-size: 20rpx;
  color: #999999;
}

.list {
  margin-top: 100rpx;
  margin-left: 32rpx;
}
.business {
  width: 686rpx;
  height: 298rpx;
  box-shadow: 0 5px 10px 0 rgba(35, 40, 50, 0.15);
  background-color: #ffffff;
  position: relative;
  margin-bottom: 106rpx;
}
.business_top {
 position:relative;
}
.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 5px;
  position: absolute;
  top:-40rpx;
  left:32rpx;
}
.state {
  position: absolute;
  top:-40rpx;
  left:368rpx;
  font-family: FZMHK-GBK1-0;
  font-size: 28rpx;
  color: #d32607;
  right:0;
  text-align:right;

}
.doing {
  color: #232832;
}
.time {
  color: #d32607;
}
.all {
  display: inline-block;
  margin-top:20rpx;
  margin-left: 180rpx;
}
.info {
  display: flex;
  height: 140rpx;
  flex-direction: column;
  justify-content: space-between;
}
.title {
  display: inline-block;
  vertical-align: top;
  margin-top:-8rpx;
  text-align:left;
  width: 340rpx;
}
.line {
  width: 2px;
  height: 15px;
  margin-left:-13rpx;
  margin-right: 10rpx;
  display: inline-block;
  background-color: #232832;
}
.address{
  margin-top:20rpx;
  margin-left:30rpx;
  color: #999999;
  font-size: 28rpx;
}
.brand {
  font-weight: 500;
  font-size: 32rpx;
  color: #000000;
  margin-top: 6rpx;
}
.feature {
  font-size: 24rpx;
  color: #9a9ca0;
}
.red {
  font-size: 36rpx;
  font-weight: 500;
  color: #d32607;
}
.btn {
  position: absolute;
  color: #000;
  bottom:0;
  font-size: 32rpx;
  border-top: 1px solid #f1f1f1;
  margin:0 32rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  -webkit-justify-content:space-between;
  width:calc(100% - 64rpx);
  height:106rpx;
  align-items: center;
  -webkit-align-items:center;
}
.detail_btn {
  width: 166rpx;
  height: 56rpx;
  text-align: center;
  border: solid 1px #232832;
  line-height: 56rpx;
}
.spread_btn {
  width: 232rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.2);
  background-color: #232832;
  color: #ffffff;
  border-radius: 0;
  margin-right: 0;
  font-size: 32rpx;
}


.swiper-tab{
    width: 100%;
    font-size: 36rpx;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    margin-top: 100rpx;
    justify-content: space-around;
}
.swiper-tab-item{
    width: 22%; 
    color: #686868;
    font-weight: 300;
}
.active{
    color: #232832;
    font-weight: 500;
    border-bottom: 4rpx solid #232832;
}
swiper{
  text-align: center;
}

.modalbox {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  z-index: 999;
  background:rgba(0, 0, 0, 0.6);
}

.modal {
  text-align: center;
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
  width: 592rpx;
  height: 300rpx;
  border-radius: 5px;
  padding-top: 20rpx; 
  background-color: #ffffff;
  color: #000000;
}

.modal .text {
  font-size: 32rpx;
  min-height: 130rpx;
  letter-spacing: 0.3px;
  text-align: center;
  padding: 36rpx 20rpx;
  color: #999;
}
.modalbox_btn {
  border-top:0.5px solid #ccc;
  position:absolute;
  bottom:0;
  margin:auto;
  left:0;
  right:0;

}
.modal button {
  display: inline-block;
  width: 100%;
  font-size: 40rpx;
  font-weight: 500;
  letter-spacing: 0.4px;
  border: none;

}
