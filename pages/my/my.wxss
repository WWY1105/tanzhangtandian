page {
  background-color: #26232d;
}
.toLogin{
  background:transparent;
  font-size: 40rpx;
  text-decoration: underline;
  color: #fff;
}

.userCard {
  background: url(https://saler.ishangbin.com/img/my/background.png);
  background-size: 100% 256rpx;
  background-repeat: no-repeat;
  width: 100%;
  height: 256rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.userCard {}

.userimg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;

}

.contentBox {
  height: 100%;
  padding: 40rpx;
  padding-top: 0rpx;
}

.eachPart {
  border-radius: 20px;
  background-color: #313237;
  margin-bottom: 20rpx;
  padding: 0 20rpx ;
}

.eachPart .titleBox {
  padding: 20rpx 0;
  border-bottom: 2rpx solid  #3b3d43;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}
.eachPart .titleBox  .more{
  font-size: 28rpx;
  font-weight: normal;
  text-align: right;
  color: #aaa9ab;
}
.eachPart .titleBox  .more .iconfont{
  margin-left: 10rpx;
  font-size: 30rpx;
  line-height: 1;
}
.eachPart .content {
  padding:26rpx 40rpx 40rpx 40rpx;
}
.eachPart .content .each{
  margin-right: 40rpx;
}
.eachPart .content .iconText{
  color: #fff;
  font-size: 24rpx;
}
.eachPart .content image.icon{
  width: 78rpx;
  height: 78rpx;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
}
.content1 .eachTitle{
  font-size: 24rpx;
}
.content1 .each{
  width: 50%;
}
.content1 .each .num{
  font-size: 40rpx;
  font-weight: bold;
}
.content1 .each .num .yuan{
  font-size: 24rpx;
  font-weight: bold;
  margin-left: 10rpx;
}
.contentBoxTitle{
  border-bottom: 2rpx  solid  #3b3d43;
  padding:20rpx 0;
  margin-bottom: 40rpx;
  padding-bottom: 0;
}
.contentBoxTitle .tab{
  width: 50%;
  font-size: 32rpx;
  font-weight: 500;
}
.contentBoxTitle .tab .line{
  width: 96rpx;
  height: 10rpx;
  border-radius: 5rpx;
  background-color: #d04048;
  margin-top: 10rpx;
}