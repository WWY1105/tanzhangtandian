/* pages/component/auth.wxss */
@import '../../iconfont/iconfont.wxss';

.modal {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  background: rgba(0, 0, 0, 0.7);
  z-index: 999999999999999999999999;
}
.modal.authInfoModal{
   z-index: 99999999999999999999999999999999999999999999999999999999;
   position: relative;
}
.modal .content{
position: relative;
}
.modal .icon-close{
   position: fixed;
top: 20%;
right: 20%;
border-radius: 50%;
border: 2rpx solid #fff;
padding: 9rpx;

}

.modal image{
  width: 560rpx;
  /* height: 100%; */
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}
.modal button{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  opacity: 0;
}