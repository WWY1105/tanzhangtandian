               <!-- 代金券 end-->
            </view>
         </view>
         <!-- 发的多赚的多 -->
         <form report-submit="true" bindsubmit='showSend'>
            <button class="send_red_btn" form-type='submit'>
               分享拆红包
            </button>
         </form>
