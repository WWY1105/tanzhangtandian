/* pages/shop/index.wxss */
page{
  background-color: #232832;
}
swiper {
  position: absolute;
  width: 100%;
  height: 476rpx;
}
swiper image{
  width: 100%;
  height: 476rpx;
}
swiper,swiper-item {
  height: 476rpx;
}
.header {
  width: 100%;
  height: 476rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
}
.model {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 150rpx;
  background: #000;
  opacity: 0.6;
}
.shopinfo {
  position: absolute;
  bottom: 0;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 10rpx 30rpx ;
  height: 130rpx;
}
.address {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx; 
  font-size: 32rpx;
  color: #fff;
  border-bottom:1px solid  #434850;
}
.content {
  margin-top: 34rpx;
  width: 686rpx;
  padding: 0 32rpx 40rpx;
}
.shopname {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
}
.introduce_title {
  height: 50rpx;
  margin-top: 50rpx;
  margin-bottom: 40rpx;
  line-height: 50rpx;
  text-align: center;
}
.introduce_title text {
  margin: 0 20rpx;
  font-size: 32rpx;
}
.line {
  width: 120rpx;
  height: 1px;  
  display: inline-block;
  vertical-align: middle;
  background-color: #979797;
}
.content image {
  margin-top: 20rpx;
  width: 686rpx;
}