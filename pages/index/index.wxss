/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: PingFangSC;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
}

.avatar {
  width: 139.2rpx;
  height: 139.2rpx;
  border-radius: 50%;
  border: 1px solid black;
}
.name {
  font-family: PingFangSC;
  font-size: 20px;
  color: #333333;
  margin-top: 16.4rpx;
}

.line{
  width: 634rpx;
  height: 1px;
  margin-top: 48rpx;
  background-color: #e7e7e7;
}

.title {
  font-family: PingFangSC;
  font-size: 16px;
  color: #333333;
  margin-top: 50rpx;
}

.content {
  font-size: 14px;
  margin-top: 32rpx;
  color: #999999;
}

.btn {
  width: 630rpx;
  height: 88rpx;
  border-radius: 5px;
  background-color: #56bc37;
  margin-top: 90rpx;
  font-size: 16px;
  color: #ffffff;
}

.modal {
  text-align: center;
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
  width: 592rpx;
  height: 268rpx;
  border-radius: 22px;
  background-color: #ffffff;
  color: #000000;
}

.modal .text {
  font-size: 16px;
  letter-spacing: 0.3px;
  text-align: center;
  margin: 36rpx 0;
}
.modal button {
  display: inline-block;
  width: 50%;
  font-size: 20px;
  font-weight: 500;
  letter-spacing: 0.4px;
  border: none;
}